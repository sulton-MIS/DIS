    function updateData() {
        var chk = $("input[name='checkdata[]']:checked").length;
        //alert('hai >> ' + chk);

        if (chk == 0) {
            GenerateMessage("", "MWP012");
        }
        else {
            $("input[name='checkdata[]']").each(function () {
                if ($(this).is(':checked')) {

                    var ID = $('#EditID').val();
                    var NAME_SAGYOSHA = $('#editNameSagyosha').val();
                    var ID_SAGYOSHA = $('#editIdSagyosha').val();
