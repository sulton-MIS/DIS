                        }

                    }

                    //var Send_Var = ID + "," + NAME_SAGYOSHA + "," + ID_SAGYOSHA + "," + STATUS_OPMJ;

                    $.ajax({
                        type: "POST",
                        url: 'DISR090001/Update_Data',
                        async: false,
                        data: {
                            DATA: Send_Var
                        },
                        success: function (data) {
                            if (data.sts == "TRUE") {
                                toastr.success(data.message);
                                cancel_edit();                               
                                $('#btn_edit').attr('disabled', true);
                                $('#modalEditForm').modal('hide');
