<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        @*<tr>
                                <th style="width: 1000px;" colspan="4">MATERIAL USAGE COST</th>
                                <th style="width: 2700px;" colspan="9">LABOR COST</th>
                            </tr>*@
                        <tr>
                            <th style="width: 60px;" rowspan="2">DETAIL</th>
                            <th style="width: 150px;" rowspan="2">NO.</th>
                            <th style="width: 250px;" rowspan="2">DMC TYPE</th>
                            <th style="width: 250px;" rowspan="2">CUSTOMER</th>
                            <th style="width: 250px;" rowspan="2">LOT SIZE</th>
                            <th style="width: 2400px;" colspan="8">SALES PRICE LOT 10-5000</th>
                            <th style="width: 250px;" rowspan="2">WIS</th>
                            <th style="width: 250px;" rowspan="2">Cavity Film</th>
                            <th style="width: 250px;" rowspan="2">Cavity Glass</th>
                            <th style="width: 250px;" rowspan="2">Cavity Tail</th>
                            <th style="width: 250px;" rowspan="2">Type</th>
                            <th style="width: 150px;" rowspan="2">Rank</th>
                            <th style="width: 250px;" rowspan="2">Inch</th>
                            <th style="width: 250px;" rowspan="2">Material Cost</th>
                            <th style="width: 1000px;" colspan="5">LABOUR COST</th>
                            <th style="width: 250px;" rowspan="2">Total Labour</th>
                            <th style="width: 250px;" rowspan="2">In-Direct Labour</th>
                            <th style="width: 250px;" rowspan="2">SGA</th>
                            <th style="width: 500px;" colspan="2">TRANSPORTASI JPN</th>
                            <th style="width: 500px;" colspan="2">TRANSPORTASI SHA</th>
                            <th style="width: 500px;" colspan="2">TRANSPORTASI HKG</th>
                            <th style="width: 500px;" colspan="2">TOTAL COST JPN</th>
                            <th style="width: 500px;" colspan="2">TOTAL COST SHA</th>
                            <th style="width: 500px;" colspan="2">TOTAL COST HKG</th>
                            <th style="width: 250px;" rowspan="2">Total Cost FOB</th>
                            <th style="width: 250px;" rowspan="2">Prod Yield Film</th>
                            <th style="width: 1200px;" colspan="6">TOTAL COST HKG</th>
                        </tr>
                        <tr>
                            <th style="width: 300px;">MassPro AIR CIF JPN</th>
                            <th style="width: 300px;">MassPro SEA CIF JPN</th>
                            <th style="width: 300px;">MassPro AIR CIF SHA</th>
                            <th style="width: 300px;">MassPro SEA CIF SHA</th>
                            <th style="width: 300px;">MassPro AIR CIF HKG</th>
                            <th style="width: 300px;">MassPro SEA CIF HKG</th>
                            <th style="width: 300px;">MassPro FOB</th>
                            <th style="width: 300px; border: initial">Enginering Sample</th>
                            <th style="width: 200px;">Printing</th>
                            <th style="width: 200px;">Etching</th>
                            <th style="width: 200px;">Press</th>
                            <th style="width: 200px;">Assy</th>
                            <th style="width: 200px; border: initial">Konpo</th>
                            <th style="width: 250px;">Air Cif Jpn</th>
                            <th style="width: 250px; border: initial">Sea Cif Tokyo</th>
                            <th style="width: 250px; ">Air Cif Sha</th>
                            <th style="width: 250px; border: initial">Sea Cif Sha</th>
                            <th style="width: 250px;">Air Cif Hkg</th>
                            <th style="width: 250px; border: initial">Sea Cif Hkg</th>
                            <th style="width: 250px;">Air Cif Jpn</th>
                            <th style="width: 250px; border: initial">Sea Cif Tokyo</th>
                            <th style="width: 250px;">Air Cif Sha</th>
                            <th style="width: 250px; border: initial">Sea Cif Sha</th>
                            <th style="width: 250px;">Air Cif Hkg</th>
                            <th style="width: 250px; border: initial">Sea Cif Hkg</th>
                            <th style="width: 200px;">Printing</th>
                            <th style="width: 200px;">Non-Printing</th>
                            <th style="width: 200px;">Etching</th>
                            <th style="width: 200px;">Press</th>
                            <th style="width: 200px;">Assembly</th>
                            <th style="width: 200px; border: initial">Konpo</th>
                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="10" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 350px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 60px">
                                                <button type="button" id="@item.ID" class="btn btn-success btn-xs" onclick="reloadDetail(this)" style="display: inline-block;">Show</button>
                                            </td>
                                            <td class="align-right align-middle" style="width: 150px"> @item.ROW_NUM </td>
                                            <td style="width: 250px"> @item.DMC_TYPE </td>
                                            <td style="width: 250px"> @item.CUSTOMER </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.LOT_SIZE </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProAirCifJpn </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProSeaCifJpn </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProAirCifSha </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProSeaCifSha </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProAirCifHkg </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProSeaCifHkg </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.MassProFob </td>
                                            <td class="align-right align-middle" style="width: 300px"> @item.EngineeringSample </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.WIS </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.CAVITY_FILM </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.CAVITY_GLASS </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.CAVITY_TAIL </td>
                                            <td style="width: 250px"> @item.TYPE </td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.RANK </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.INCH </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.MATERIAL_COST </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.COST_PRINTING </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.COST_ETCHING </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.COST_PRESS </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.COST_ASSY </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.COST_KONPO </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.TOTAL_LABOUR </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.INDIRECT_LABOUR </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.SGA </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_AirCifJpn </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_SeaCifTokyo </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_AirCifSha </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_SeaCifSha </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_AirCifHkg </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Trans_SeaCifHkg </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_AirCifJpn </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_SeaCifTokyo </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_AirCifSha </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_SeaCifSha </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_AirCifHkg </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_SeaCifHkg </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Total_Cost_FOB </td>
                                            <td class="align-right align-middle" style="width: 250px"> @item.Prod_Yield_Film </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_Printing </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_NonPrinting </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_Etching </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_Press </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_Assembly </td>
                                            <td class="align-right align-middle" style="width: 200px"> @item.CT_Konpo </td>

                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("ProdCost/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
            <div id="myProgress">
                <div id="myBar"></div>
            </div>
        </table>
    </div>

</div>
