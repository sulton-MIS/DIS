<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap4/bootstrap.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Exam/Site.css")" />
    <script>
        $(document).ready(function () {

        });

        // back botton
        function back_to_home() {
            location.href = "/WPMember"
        }

    </script>

</head>
<body style="background-color: #f3f7f7">
    <header class="navbar navbar-expand sticky-top navbar-dark bg-dark flex-column flex-md-row" style="background-color: #39424e">
        <div class="container">
            <div class="text-white">@ViewBag.User</div>
        </div>
    </header>
    <div>
        <nav class="navbar navbar-light bg-white shadow-sm">
            <div class="container pl-0" style="padding-top: 14px; padding-bottom: 14px;">
                <div>
                    <h3 class="font-weight-bold text-left m-0 p-0">Training List</h3>
                </div>
                <div>
                    <button type="button" onclick="back_to_home()" class="btn btn-secondary btn-xs" id="btn_back_to_home" style="width: 80px;"><i class="fa fa-home"></i> Home</button>
                </div>

            </div>
        </nav>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="@Url.Content("~/Content/jquery-3.4.1.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Bootstrap4/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Exam/Site.js")"></script>
</body>
</html>
