            <div class="jumbotron">
                <h1 id="loading-text">Loading...</h1>
            </div>
        </div>*@
    <script>
        //Loading
        $(document).ajaxStart(function () {
            $('.loader').show();
        }).ajaxStop(function () {
            $(".loader").delay(500).fadeOut("slow");
        });
    </script>

</body>
</html>