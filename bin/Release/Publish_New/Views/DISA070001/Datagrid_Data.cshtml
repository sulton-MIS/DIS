@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA070001Master;
@{
    List<DISA070001Master> DataWP = (List<DISA070001Master>)ViewData["DataDISA070001"]; 

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 100px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>
                            <th style="width: 40px;" rowspan="2">NO</th>
                            <th style="width: 80px;" rowspan="2">HALTE</th>
                            <th style="width: 100px;" rowspan="2">DATE</th>
                            <th style="width: 100px;" rowspan="2">TIME</th>
                            <th style="width: 80px;" rowspan="2">OPMJ</th>
                            <th style="width: 350px;" rowspan="2">MASALAH</th>
                            <th style="width: 350px;" rowspan="2">ACTION</th>                         
                        </tr>                      
                        <!--<tr>-->
                            @*Colspan Dari "Created"*@
                            <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>-->
                            @*Colspan Dari "Created"*@
                            <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>
                        </tr>-->
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="8" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 550px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA070001Master item in DataWP)
                                    {                                       
                                                <tr id="row-@number" class="row-@item.ID">
                                                    <td style="width: 100px; text-align: center;" class="grid-checkbox-col">
                                                        <input class="grid-checkbox" value="@item.ID,@item.HALTE,@(string.Format("{0:yyyy-MM-dd}",DateTime.Parse(@item.DATE))),@item.TIME,@item.OPMJ,@item.MASALAH,@item.ACTION" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                                    </td>
                                                    <td style="width: 40px">
                                                        @item.ROW_NUM
                                                    </td>
                                                    <td style="width: 80px"> @item.HALTE</td>
                                                    <td style="width: 100px"> @(string.Format("{0:yyyy-MM-dd}",DateTime.Parse(@item.DATE))) </td>
                                                    @*<td style="width: 100px"> @item.DATE  </td>*@
                                                    <td style="width: 100px"> @item.TIME </td>
                                                    <td style="width: 80px"> @item.OPMJ </td>
                                                    <td style="width: 350px"> @item.MASALAH </td>
                                                    <td style="width: 350px"> @item.ACTION</td>
                                                </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
