    // proses pencarian data
    function searchData(page, size) {
        var DMC_CODE = $('#searchDMCCode').val();
        var DMC_PART = $('#searchDMCPart').val();
        var LOT_NO = $('#searchLotNo').val();
        var KODE_PROSES = $('#searchKodeProses').val();
        var KODE_MESIN = $('#searchKodeMesin').val();
        var WAKTU_MULAI = $('#searchTimeSagyo').val();
        var WAKTU_SELESAI = $('#searchTimeKanryo').val();

        Last_Record_Per_Page = $("#paging").val();
        $.ajax({
            type: "POST",
            url: SITE_URL + 'Search_Data',
            async: false,
            data: {
                start: page,
                display: size,
                DATA_ID: $("#data_nm").val(),
                EXECUTION_TIME: $("#exec_time_cd").val(),
                TIME_UNIT_CRITERIA: $("#time_unit_cd").val(),
                STATUS_ACTIVE: $("#sts_cd").val(),
                DMC_CODE: DMC_CODE
                , DMC_PART: DMC_PART.trim()
                , LOT_NO: LOT_NO.trim()
                , KODE_PROSES: KODE_PROSES
                , KODE_MESIN: KODE_MESIN
                , WAKTU_MULAI: WAKTU_MULAI
                , WAKTU_SELESAI: WAKTU_SELESAI
            },
            success: function (data) {
                $("#GridTable").html(data);
                $("#paging").val(Last_Record_Per_Page);
                if ($('#cntPage').val() == "1") {
                    $('#btn_clear').prop('disabled', false);
                } else {
                    $('#btn_clear').prop('disabled', false);
                }

                scroll_and_checkbox();
                cek_perdata();
            }
        });
    }

