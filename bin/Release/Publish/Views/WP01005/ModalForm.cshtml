<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">FORM ADD USER / WORKER </h4>
            </div>

            <div class="modal-body">
                @*<div class="FlexLine">
            <span class="FlexText">WORKER FORM</span>
        </div>*@
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Nama Karyawan</label>
                        <input id="addNameSagyosha" required type="text" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="required">NIK</label>
                        <input id="addIdSagyosha" required type="text" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Departemen</label>
                        <input id="addDept" required type="text" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="required">Bagian</label>
                        <input id="addBagian" required type="text" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Jabatan</label>
                        <input id="addJabatan" required type="text" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>Group</label>
                        <input id="addGroup" required type="text" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">TMK</label>
                        <input type="text" class="form-control datepicker" id="addTmk">
                    </div>
                    <div class="col-md-6">
                        <label>Comment</label>
                        <input id="addComment" required type="text" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

