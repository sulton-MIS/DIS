                                            }

                                        }
                                    }
                                }
                            }*@
                        </select>
                    </div>
                    <div class="form-group">
                        <label>No A/L </label>
                        <input type="text" class="form-control space-input" id="WP02002_TXT_ADD_NOALLEAD" disabled placeholder="Pengisian No A/L Pimpinan">
                    </div>
                    <div class="form-group">
                        <label>No HP </label>
                        <input type="text" class="form-control space-input" disabled id="WP02002_TXT_ADD_NOHPLEAD" placeholder="Pengisian No HP Pimpinan">
                    </div>
                </div>

                <div class="col-lg-6 section-wrapper-child">
                    <label class="section-title-child">
                        <b><u>Supervisor</u></b>
                    </label>
                    <div class="form-group">
                        <label>Name </label>
                        <select class="form-control space-input select2 input-job" id="WP02002_DDL_ADD_NAMAPGWS" disabled>
                            <option value="">- select -</option>
                            @*@{
                                if (Employee != null)
                                {
                                    if (Employee.Count() > 0)
                                    {
                                        foreach (EmployeeModel item in Employee)
                                        {
                                            if (item.COMPANY_CODE == "TMMIN")
                                            {
                                                <option style="display:none" value="@item.ID_TB_M_EMPLOYEE" code="@item.ID_TB_M_COMPANY" noanzen="@item.ANZEN_SERTIFICATE_NO" phone="@item.PHONE">@item.NAME</option>
                                            }
                                            else
                                            {
                                                <option style="display:none" value="@item.ID_TB_M_EMPLOYEE" code="@item.ID_TB_M_COMPANY,@item.PIC_STATUS" noanzen="@item.ANZEN_SERTIFICATE_NO" phone="@item.PHONE">@item.NAME</option>
                                            }
                                        }
                                    }
                                }
                            }*@
                        </select>
                    </div>
                    <div class="form-group">
                        <label>No A/L </label>
                        <input type="text" class="form-control space-input" id="WP02002_TXT_ADD_NOALPGWS" placeholder="Pengisian No A/L Pengawas" disabled>
                    </div>
                    <div class="form-group">
                        <label>No HP </label>
                        <input type="text" class="form-control space-input" id="WP02002_TXT_ADD_NOHPPGWS" placeholder="Pengisian No HP Pengawas" disabled>
                    </div>
                </div>
            </div>

            <div class="row" style="margin: 15px 0 0 0">
                <div class="col-lg-12 section-wrapper-child" style="padding:0px">
                    <label class="section-title-child">
                        <b><u>Area Mapping</u></b>
                    </label>
                    <div class="area-border-container" style="display:contents; position:absolute; width: 100%">
                        <span class="border-area-location"></span>
                        <img id="image-area" src="" style="height:280px; width: 100%; cursor:pointer" onclick="showAreaMapping()" />
                    </div>
                </div>
            </div>
            <br />
    </div>
    </div>