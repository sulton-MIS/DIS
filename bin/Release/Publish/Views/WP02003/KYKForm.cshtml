@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP02003Master;
@{

    List<ProjectModel> Projects = (List<ProjectModel>)ViewData["Project"];
    List<ProjectJobModel> ProjectJobs = (List<ProjectJobModel>)ViewData["ProjectJob"];
    List<WorkItemModel> Items = (List<WorkItemModel>)ViewData["WorkItem"];
    List<WorkItemModel> Utilitys = (List<WorkItemModel>)ViewData["Utility"];
    List<WorkItemModel> APDS = (List<WorkItemModel>)ViewData["APD"];
    List<PekerjaModel> Pekerjas = (List<PekerjaModel>)ViewData["Pekerja"];



    List<AreaModel> Areas = (List<AreaModel>)ViewData["Area"];
    List<DivisionModel> Division = (List<DivisionModel>)ViewData["Division"];
    List<LocationModel> Location = (List<LocationModel>)ViewData["Location"];
}

@{
    <input type="hidden" id="WP02003_ADD_WP_DAILY_ID" value="@System.Guid.NewGuid().ToString()" />
}
<div class="row">
    <label class="section-title">
        <u>IDENTITAS PEKERJAAN</u>
    </label>
    <div class="col-lg-6">
        <div class="form-group">
            <label class="required">Project Name </label>
            <select id="WP02003_DDL_ADD_PROJECT" onchange="getDetailInformationProject('add', this.value)" class="form-control input-xxlarge select2" required>
                <option value="">- select -</option>
                @{
                    if (Projects != null)
                    {
                        if (Projects.Count() > 0)
                        {
                            foreach (ProjectModel item in Projects)
                            {
                                <option value="@item.ID">@item.PROJECT_NAME</option>
                            }
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Project Area </label>
            <input id="WP02003_ADD_PROJECT_AREA" class="form-control" type="text" >
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Project Location </label>
            <input id="WP02003_ADD_PROJECT_LOCATION" class="form-control" type="text" >
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Pelaksana (PT/CV) </label>
            <input id="WP02003_ADD_PELAKSANA" class="form-control" type="text" >
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-6">
                    <label>Periode Project Start </label>
                    <input id="WP02003_ADD_PROJECT_START_DATE" class="form-control" type="text" >
                </div>
                <div class="col-lg-6">
                    <label>Periode Project End </label>
                    <input id="WP02003_ADD_PROJECT_END_DATE" class="form-control" type="text" >
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label class="required"> Job Responsible</label>
        <select id="WP02003_DDL_ADD_PROJECT_JOB" class="form-control">
            @{
                if (ProjectJobs != null)
                {
                    if (ProjectJobs.Count() > 0)
                    {
                        foreach (ProjectJobModel item in ProjectJobs)
                        {
                            <option value="@item.ID">@item.JOB_NAME</option>
                        }
                    }
                }
            }
        </select>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>KYK Title </label>
            <input id="WP02003_ADD_JOBTITLE" class="form-control" type="text">
        </div>
    </div>
</div>
<div class="row" style="margin-top: 30px;">
    <div class="col-lg-6">
