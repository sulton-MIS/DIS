                    <th rowspan="2">Jam Pelaksanaan</th>
                    <th style="width: 250px;" colspan="7">Potensi Bahaya (STOP 6)</th>
                    <th rowspan="2">Action</th>
                </tr>
                <tr>
                    <th style="width: 20px; background:yellow">A</th>
                    <th style="width: 20px; background:yellow">B</th>
                    <th style="width: 20px; background:yellow">C</th>
                    <th style="width: 20px; background:yellow">D</th>
                    <th style="width: 20px; background:yellow">E</th>
                    <th style="width: 20px; background:yellow">F</th>
