    function delete_data() {
        var chk = $("input[name='checkdata[]']:checked").length;
        //alert('hai >> ' + chk);

        if (chk == 0) {
            GenerateMessage("", "MWP012");
        }
        else {
            var Var = "";
            var Send_Var = "";
            var Delete_Name = "";
            $("input[name='checkdata[]']").each(function () {
                if ($(this).is(':checked')) {
                    Var = "";
                    Var = Var + $(this).val();
                    if (Var != '') {
                        Send_Var = Send_Var + Var.split(',')[0] + ",";
                        Delete_Name = Delete_Name + Var.split(',')[2] + ",";
                    } else {
                        Send_Var = Send_Var + "," + Var.split(',')[0];
