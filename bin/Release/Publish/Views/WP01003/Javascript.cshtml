            });

            $.ajax({
                type: "POST",
                url: 'WP01003/Delete_Data',
                async: false,
                data: {
                    DATA: Send_Var
                },
                success: function (data) {
                    var DELETED_NAME = Delete_Name.split(',');
                    for (var i = 0; i < data.DELETE_MSG.length; i++) {
                        var getData = data.DELETE_MSG[i];
                        if (getData.DELETE_MSG == 'True') {
                            GenerateMessage(DELETED_NAME[i], "MWP002");
                        } else {
                            GenerateMessage(DELETED_NAME[i], "MWP009");
                        }
                        
                    }
                    $("#Confirmation_Delete_Popup").modal('hide');
                    
                    OnSearch(1);
                    //xxx
                }
            });
