    //tombol Add New
    function addNew() {
        var AREA_CODE = $('#addAreaCode').val();
        var LOC_CODE = $('#addLocationCode').val();
        var LOC_NAME = $('#addLocationName').val();
        var STATUS = $('#addStatus').val();
        
        $.ajax({
