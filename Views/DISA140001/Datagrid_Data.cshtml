@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA140001Master;
@{
    List<DISA140001Master> DataWP = (List<DISA140001Master>)ViewData["DataDISA140001"]; 

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 30px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>
                            <th style="width: 30px;" rowspan="2">NO</th>
                            <th style="width: 150px;" rowspan="2">ID Produksi</th>
                            <th style="width: 50px;" rowspan="2">ID Proses</th>
                            <th style="width: 150px;" rowspan="2">Nama Proses</th>
                            <th style="width: 150px;" rowspan="2">Tipe</th>
                            <th style="width: 50px;" rowspan="2">NIK</th>
                            <th style="width: 150px;" rowspan="2">Nama</th>
                            <th style="width: 100px;" rowspan="2">Serial No</th>
                            <th style="width: 50px;" rowspan="2">Lotto</th>
                            <th style="width: 50px;" rowspan="2">QTY</th>
                            <th style="width: 50px;" rowspan="2">Total Berat</th>
                            <th style="width: 200px;" rowspan="2">Keterangan</th>
                            <th style="width: 40px;" rowspan="2">Shift</th>
                            <th style="width: 150px;" rowspan="2">Create By</th>
                            <th style="width: 150px;" rowspan="2">Create Date</th>
                            <th style="width: 150px;" rowspan="2">Update By</th>
                            <th style="width: 150px;" rowspan="2">Update Date</th>
                        </tr>                                              
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="10" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 550px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA140001Master item in DataWP)
                                    {                                       
                                                <tr id="row-@number" class="row-@item.ID">
                                                    <td style="width: 30px; text-align: center;" class="grid-checkbox-col">
                                                        <input class="grid-checkbox" value="@item.ID,@item.ID_PRODUKSI,@item.ID_PROSES,@item.NAMA_PROSES,@item.DMC_CODE,@item.NIK,@item.NAMA,@item.SERIAL_NO,@item.LOTTO,@item.QTY,@item.TOTAL_BERAT,@item.KETERANGAN,@item.SHIFT,@item.CREATE_BY,@item.CREATE_DATE" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                                    </td>
                                                    <td style="width: 30px">
                                                        @item.ROW_NUM
                                                    </td>
                                                    <td style="width: 150px"> @item.ID_PRODUKSI</td>
                                                    <td style="width: 50px"> @item.ID_PROSES </td>
                                                    <td style="width: 150px"> @item.NAMA_PROSES </td>
                                                    <td style="width: 150px"> @item.DMC_CODE </td>
                                                    <td style="width: 50px"> @item.NIK</td>
                                                    <td style="width: 150px"> @item.NAMA</td>
                                                    <td style="width: 100px"> @item.SERIAL_NO</td>
                                                    <td style="width: 50px"> @item.LOTTO</td>
                                                    <td style="width: 50px"> @item.QTY</td>
                                                    <td style="width: 50px"> @item.TOTAL_BERAT</td>
                                                    <td style="width: 200px"> @item.KETERANGAN</td>
                                                    <td style="width: 40px"> @item.SHIFT</td>
                                                    <td style="width: 150px"> @item.CREATE_BY</td>
                                                    <td style="width: 150px"> @item.CREATE_DATE</td>
                                                    <td style="width: 150px"> @item.UPDATE_BY</td>
                                                    <td style="width: 150px"> @item.UPDATE_DATE</td>
                                                    @*<td style="width: 100px"> @(string.Format("{0:yyyy-MM-dd}",DateTime.Parse(@item.TIME_KOSHIN))) </td>*@
                                                </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
