@Html.Partial("Layout_Datagrid_Detail")

<div class="row" style="margin-top: -13px; margin-left: 10px; margin-right: 10px;">
    <div class="col-xs-12 col-sm-12 col-md-11">
        <h2><b>[@ViewData["Title"]]</b></h2>

        <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="Detail_Proses">
            <p style="width: 20%; color: blue; text-decoration: underline;">
                <b>Schedule Proses</b>
            </p>
            <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
                <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                    <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 80%; table-layout: fixed; border:none">
                        <thead>
                            <tr>
                                <th style="width: 50px;">No.</th>
                                <th style="width: 400px;">Proses</th>
                                <th style="width: 50px;">OK</th>
                                <th style="width: 50px;">NG</th>
                                <th style="width: 50px;">PND</th>
                                <th style="width: 100px;">NIK</th>
                                <th style="width: 200px;">NAMA OPR</th>
                                <th style="width: 200px;">ADM</th>
                            </tr>
                        </thead>
                        @{
                            if (DataDetail == null || DataDetail.Count == 0)
                            {
                                <tr id="NoDataFound">
                                    <td colspan="10" class="text-center">No data found</td>
                                </tr>
                            }
                        }
                    </table>
                </div>

                <!--data grid-->
                <div id="tScrollBody" style="height: 180px;">
                    <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 80%; table-layout: fixed; border: none">
                        <tbody id="tableBody">
                            <!----><!----><!---->
                            @{
                                if (DataDetail != null)
                                {
                                    if (DataDetail.Count > 0)
                                    {
                                        var number = 1;
                                        foreach (DISR190001Detail item in DataDetail)
                                        {
                                            <tr id="row-@number" class="row-@item.ID">
                                                <td class="align-center align-middle" style="width: 50px"> @number </td>
                                                <td class="align-left align-middle" style="width: 400px"> @item.NAME_KOTEI </td>
                                                <td class="align-right align-middle" style="width: 50px"> @item.AMNT_OK</td>
                                                <td class="align-right align-middle" style="width: 50px"> @item.AMNT_NG</td>
                                                <td class="align-right align-middle" style="width: 50px"> @item.AMNT_PND</td>
                                                <td class="align-left align-middle" style="width: 100px"> @item.ID_SAGYOSHA1 </td>
                                                <td class="align-left align-middle" style="width: 200px"> @item.NAME_SAGYOSHA1 </td>
                                                <td class="align-left align-middle" style="width: 200px"> @item.Z_INPUTUSER_ADM </td>
                                            </tr>
                                            number++;
                                        }
                                    }
                                }
                            }
                            <!----><!----><!---->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
