@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP02001Master;
@{

//List<AreaModel> Areas = (List<AreaModel>)ViewData["Area"];
//List<DivisionModel> Division = (List<DivisionModel>)ViewData["Division"];

//List<LocationModel> Location = (List<LocationModel>)ViewData["Location"];

}




<div class="row ">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-4">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">PIC Request <span style="color:red">*</span></label>
                <input type="text" autocomplete="off" class="form-control" id="addPicRequest" />
            </div>
            <div class="col-md-4">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">Department Request <span style="color:red">*</span></label>
                <select id="addDeptRequest" class="form-control" required>
                    <option id="addDeptRequest" value="">- SELECT -</option>
                    <option id="addDeptRequest" value="ACC">ACC</option>
                    <option id="addDeptRequest" value="BP">BP</option>
                    <option id="addDeptRequest" value="CMS">CMS</option>
                    <option id="addDeptRequest" value="GO">GO</option>
                    <option id="addDeptRequest" value="ME">ME</option>
                    <option id="addDeptRequest" value="MNF">MNF</option>
                    <option id="addDeptRequest" value="RND">RND</option>
                    <option id="addDeptRequest" value="QA/QC">QA/QC</option>
                </select>
            </div>
        </div>
        <div class="row" style="margin-top:20px;">
            <div class="col-md-4">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">Keterangan <span style="color:red">*</span></label>
                <textarea class="form-control" id="addKeterangan" rows="4" cols="50" style="resize:none"></textarea>
            </div>
            <div class="col-md-4">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">Tanggal Request <span style="color:red">*</span></label>
                <input class="form-control" type="date" id="addTglRequest" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <div class="col-lg-6">
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-success btn-xs pull-right" id="AddDataDetail" style="width: 80px;"><i class="fa fa-plus"></i> Add New</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="row space-bottom">
                <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
                    <div style="border: 1px solid #ccc; overflow:scroll; position: relative;">
                        <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                        <div id="tScrollHead" style="width: 100%; border-right:1px solid #fff">
                            <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                                <thead>
                                    <tr>
                                        <th style="width: 20%;">NAMA ASSET</th>
                                      
                                        <th style="width: 10%;">ACTION</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                            <!--data grid-->
                            <div id="tScrollBody" style="height: 255px;">
                                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                                    <!--Add Multiple Insert-->
                                    <tbody id="TBL_ADD_REQUEST_ASSET" style="display: none;">
                                        <tr>
                                            <td style="width: 20%; padding:0!important">
                                                <input type="text" class="form-control space-input" id="ADD_NAMA_ASSET" maxlength="50" autocomplete="off">
                                            </td>
                                       
                                            <td style="width: 10%">
                                                <button type="button" onclick="saveDataTemp()" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                                    <i class="fa fa-save">
                                                    </i>
                                                </button>
                                                <button type="button" id="deleteDataDetail" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                
                                    <!--Edit Multiple Insert-->
                                    <tbody id="TBL_EDIT_REQUEST_ASSET" style="display: none;">
                                        <tr>
                                            <td style="width: 20%; padding:0!important">
                                                <input type="text" class="form-control space-input" id="EDIT_NAMA_ASSET" maxlength="50" autocomplete="off">
                                            </td>
                                      
                                            <td style="width: 10%">
                                                <button type="button" id="BTN_EDIT_DETAIL_REQUEST" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                                    <i class="fa fa-save">
                                                    </i>
                                                </button>
                                                <button type="button" id="TBL_EDIT_REQUEST_ASSET_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tbody id="ADD_TBL_LIST_DETAIL_ASSET">
                                    </tbody>
                                </table>
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>