            STATUS_APPROVAL = "CHECKED";
        }
        else if (STATUS_APPROVAL.includes('APPROVED_AMS')) {
            STATUS_APPROVAL = "APPROVED AMS";
        }
        else if (STATUS_APPROVAL.includes('APPROVED_DEPT_HEAD_AMS')) {
            STATUS_APPROVAL = "APPROVED DEPT. HEAD AMS";
        } else if (STATUS_APPROVAL.includes('ACKNOWLEDGE')) {
