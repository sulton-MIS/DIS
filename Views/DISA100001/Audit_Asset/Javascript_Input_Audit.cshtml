        } else if (STATUS_APPROVAL.includes('REJECTED')) {
            STATUS_APPROVAL = "REJECTED";
        } else {
            STATUS_APPROVAL = "";
        }

        Last_Record_Per_Page = $("#paging").val();
        $.ajax({
            type: "POST",
            url: SITE_URL + '../Search_Data_Dispose',
            async: false,
            data: {
                start: page,
                display: size,
                DATA_ID: $("#data_nm").val(),
