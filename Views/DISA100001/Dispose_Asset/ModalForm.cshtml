<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">FORM ADD DISPOSE ASSET</h4>
            </div>

            <div class="modal-body">
                <div class="row" style="">
                    <div class="col-md-12">
                        <label class="required"> @*Tanggal:*@ </label>
                        @{
                            var tglSekarang = DateTime.Now.ToString("dd-MM-yyyy");
                            var hariSekarang = DateTime.Now.ToString("dddd");
                        }
                        <font style="font-size: 16px; font-style:italic">@hariSekarang, @tglSekarang</font>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-12">
                        <label class="required"> No. Asset <font style="color: red">*</font> </label>
                        <select class="form-control select2" id="addNoAsset" required>
                            <option value="" selected="selected">---PILIH---</option>
                            @{
                                if (ListAsset != null)
                                {
                                    if (ListAsset.Count() > 0)
                                    {
                                        foreach (ListAssetModel item in ListAsset)
                                        {
                                            <option value="@item.no_asset">@item.no_asset</option>
                                        }
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-6">
                        <label class="required"> Nama Asset </label>
                        <input readonly type="text" class="form-control" id="addNamaAsset">
                    </div>
                    <div class="col-md-6">
                        <label class="required"> Nama Asset Invoice </label>
                        <input readonly type="text" class="form-control" id="addNamaAssetInvoice">
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-6">
                        <label class="required"> Nama Pengguna Asset </label>
                        <input readonly type="text" class="form-control" id="addNamaUser">
                    </div>
                    <div class="col-md-6">
                        <label class="required"> Department Pengguna Asset </label>
                        <input readonly type="text" class="form-control" id="addDeptUser">
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-6">
                        <label class="required"> Lokasi Asset </label>
                        <input readonly type="text" class="form-control" id="addLokasiAsset">
                    </div>
                    <div class="col-md-6">
                        <label class="required"> Halte </label>
                        <input readonly type="text" class="form-control" id="addHalte">
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-12">
                        <label class="required"> Status Kondisi Asset <font style="color: red">*</font> </label>
                        <select class="form-control" id="addKondisiAsset" name="dropdown">
                            <option value="">- PILIH -</option>
                            <option value="OK">OK</option>
                            <option value="NG">NG</option>
                        </select>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-12">
                        <label class="required"> Lampiran Gambar <font style="color: red">*</font> </label>
                        <input type="file" onchange="change_image('add',this)" class="btn btn-white btn-xs form-control" accept="image/*" id="addNamaFoto" />
                        <img onerror="this.style.display='none'" id="addImageBox" src="" style="height:300px;width:100%" />
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-12">
                        <label class="required"> Keterangan <font style="color: red">*</font> </label>
                        <textarea id="addKeterangan" class="form-control" style="height:120px"></textarea>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button onclick="clear_add()" class="btn btn-danger btn-sm" style="width: 80px;"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

