@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA100001Master;

@{
    List<ListAssetModel> ListAsset = (List<ListAssetModel>)ViewData["no_asset"];
    List<LokasiModel> Lokasi = (List<LokasiModel>)ViewData["nama_lokasi"];

}


<div class="row ">
    <div class="col-lg-12">

        <div class="row" style="margin-top:20px;">
            <div class="col-md-4" id="SHOW_NO_DISPOSE">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">No. Dispose</label>
                <input readonly type="text" autocomplete="off" class="form-control" id="NO_DISPOSE" />
            </div>
        </div>
        
        <div class="row" style="margin-top:20px;">
            <div class="col-md-4">
                <label style="text-align:left; vertical-align:top; font-weight:bold; font-size:14px">LAMPIRAN FILE <span style="color:red">*</span></label>
                <label for="LAMPIRAN_FILE" id="show_lampiran"></label>
                <input type="file" class="form-control" id="ADD_LAMPIRAN_FILE" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <div class="col-lg-6">
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-success btn-xs pull-right" id="AddDataDetail" style="width: 80px;"><i class="fa fa-plus"></i> Add New</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row space-bottom">
                <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
                    <div style="border: 1px solid #ccc; overflow:scroll; position: relative;">
                        <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                        <div id="tScrollHead" style="width: 100%; border-right:1px solid #fff">
                            <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">NO. ASSET</th>
                                        <th style="width: 5%;">NAMA. ASSET</th>
                                        <th style="width: 5%;">NAMA USER</th>
                                        <th style="width: 5%;">DEPT. USER</th>
                                        <th style="width: 5%;">STATUS KONDISI</th>
                                        <th style="width: 5%;">KETERANGAN</th>
                                        <th style="width: 5%;">ACTION</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <!--data grid-->
                        <div id="tScrollBody" style="height: 255px;">
                            <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                                <!--Add Multiple Insert-->
                                <tbody id="TBL_ADD_DETAIL" style="display: none;">
                                    <tr>
                                        <td style="width: 5%; padding:0!important">
                                            <select class="form-control select2" id="ADD_NOMOR_ASSET" required>
                                                <option value="" selected="selected">---PILIH---</option>
                                                @{
                                                    if (ListAsset != null)
                                                    {
                                                        if (ListAsset.Count() > 0)
                                                        {
                                                            foreach (ListAssetModel item in ListAsset)
                                                            {
                                                                <option value="@item.no_asset">@item.no_asset</option>
                                                            }
                                                        }
                                                    }
                                                }
                                            </select>
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_NAMA_ASSET">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_NAMA_USER">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_DEPT_USER">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <select id="ADD_STATUS_KONDISI" class="form-control" required>
                                                <option value="">- SELECT -</option>
                                                <option value="OK">OK</option>
                                                <option value="NG" selected="selected">NG</option>
                                            </select>
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input type="text" class="form-control" id="ADD_KETERANGAN">
                                        </td>
                                        <td style="width: 5%">
                                            <button type="button" onclick="saveDataTemp()" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                                <i class="fa fa-save">
                                                </i>
                                            </button>
                                            <button type="button" id="deleteDataDetail" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                </tbody>

                                <!--Edit Multiple Insert-->
                                <tbody id="TBL_EDIT_DISPOSE_ASSET" style="display: none;">
                                    <tr>
                                        <td style="width: 5%; padding:0!important">
                                            <select class="form-control select2" id="EDIT_NOMOR_ASSET" required>
                                                @*<option value="" selected="selected">---PILIH---</option>*@
                                                @{
                                                    if (ListAsset != null)
                                                    {
                                                        if (ListAsset.Count() > 0)
                                                        {
                                                            foreach (ListAssetModel item in ListAsset)
                                                            {
                                                                <option value="@item.no_asset">@item.no_asset</option>
                                                            }
                                                        }
                                                    }
                                                }
                                            </select>
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_EDIT_NAMA_ASSET">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_EDIT_NAMA_USER">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input readonly type="text" class="form-control" id="SHOW_EDIT_DEPT_USER">
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <select id="SHOW_EDIT_STATUS_KONDISI" class="form-control" required>
                                                <option value="">- SELECT -</option>
                                                <option value="OK">OK</option>
                                                <option value="NG" selected="selected">NG</option>
                                            </select>
                                        </td>
                                        <td style="width: 5%; padding:0!important">
                                            <input type="text" class="form-control" id="SHOW_EDIT_KETERANGAN">
                                        </td>
                                        <td style="width: 5%">
                                            <button type="button" id="BTN_EDIT_DETAIL" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                                <i class="fa fa-save">
                                                </i>
                                            </button>
                                            <button type="button" id="TBL_EDIT_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                        </td>
                                    </tr>
                                </tbody>

                                <tbody id="ADD_TBL_LIST_DETAIL_ASSET">
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>