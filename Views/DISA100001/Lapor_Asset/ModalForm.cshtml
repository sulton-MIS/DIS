                <h4 class="modal-title" id="modalForm-title" style="">FORM SHOW LAPOR ASSET</h4>
            </div>

            <div class="modal-body">
                <div class="row" style="margin-top: 0px;">
                    <div class="col-md-4">
                        <label> NO. LAPOR </label>
                        <input id="show_NO_LAPOR" readonly type="text" class="form-control" style="" />
                    </div>
                    <div class="col-md-4">
                        <label> NO ASSET  </label>
                        <input id="show_NO_ASSET" readonly type="text" autocomplete="off" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label> STATUS APPROVAL </label>
                        <input id="show_STATUS_APPROVAL" readonly type="text" autocomplete="off" class="form-control" />
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-4">
                        <label> NAMA PELAPOR </label>
                        <input id="show_NAMA_PELAPOR" readonly type="text" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label> TANGGAL LAPOR  </label>
                        <input id="show_TANGGAL_PELAPOR" readonly type="text" autocomplete="off" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label> STATUS KONDISI </label>
                        <input id="show_STATUS_KONDISI" readonly type="text" autocomplete="off" class="form-control" />
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-4">
                        <label> KETERANGAN </label>
                        <textarea readonly id="show_KETERANGAN" class="form-control" style="height:100px"></textarea>
                    </div>

                </div>
                <div class="row" style="margin-top:10px" id="show_display_col_modifikasi">
                    <div class="col-md-6">
                        <label class="required"> Harga <font class="new">new</font> </label>
                        <input readonly id="showHargaBaru" type="number" class="form-control" value="" />
                    </div>
                    <div class="col-md-6">
                        <label class="required"> Cost Upgrade <font class="new">new</font>  </label>
                        <input readonly id="showCostUpgradeBaru" type="text" class="form-control" />
                    </div>
                </div>
                <div class="row" style="margin-top:10px" id="show_display_col_modifikasi2">
                    <div class="col-md-6">
                        <label class="required"> Spesifikasi <font class="new">new</font> </label>
                        <textarea readonly id="showSpesifikasiBaru" class="form-control" style="height:100px"></textarea>
                    </div>
                </div>
                <div class="row" style="margin-top:10px" id="show_display_col_lokasi">
                    <div class="col-md-4">
                        <label class="required"> Lokasi Baru <font class="new">new</font> </label>
                        <select disabled class="form-control" id="showKdLokasiBaru" required>
                            <option id="showKdLokasiBaru" value="" selected="selected">--PILIH--</option>
                            @{
                                if (Lokasi != null)
                                {
                                    if (Lokasi.Count() > 0)
                                    {
                                        foreach (LokasiModel item in Lokasi)
                                        {
                                            <option id="showKdLokasiBaru" value="@item.kd_lokasi">@item.nama_lokasi</option>
                                        }
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="required"> Sub Lokasi Baru <font class="new">new</font> </label>
                        <input readonly id="showSubLokasiBaru" type="text" class="form-control" autocomplete="off" />
                    </div>
                    <div class="col-md-4">
                        <label class="required"> Halte Baru <font class="new">new</font> </label>
                        <select disabled class="form-control" id="showHalteBaru" name="dropdown">
                            <option id="showHalteBaru" value="" selected="selected"> --Pilih-- </option>
                            <option id="showHalteBaru" value="NON-HALTE"> NON-HALTE </option>
                            <option id="showHalteBaru" value="1"> 1 </option>
                            <option id="showHalteBaru" value="2"> 2 </option>
                            <option id="showHalteBaru" value="3"> 3 </option>
                            <option id="showHalteBaru" value="4"> 4 </option>
                            <option id="showHalteBaru" value="5"> 5 </option>
                            <option id="showHalteBaru" value="6"> 6 </option>
                            <option id="showHalteBaru" value="7"> 7 </option>
                            <option id="showHalteBaru" value="8"> 8 </option>
                            <option id="showHalteBaru" value="9"> 9 </option>
                            <option id="showHalteBaru" value="10"> 10 </option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top:10px" id="show_display_col_user">
                    <div class="col-md-6">
                        <label class="required"> Nama User Baru <font class="new">new</font> </label>
                        <input readonly id="showNamaUserBaru" type="text" class="form-control" autocomplete="off" />
                    </div>
                    <div class="col-md-6">
                        <label class="required"> Dept. User Baru <font class="new">new</font> </label>
                        <select disabled class="form-control" id="showDeptUserBaru" name="dropdown">
                            <option id="showDeptUserBaru" value="">- PILIH -</option>
                            <option id="showDeptUserBaru" value="ACC">ACC</option>
                            <option id="showDeptUserBaru" value="BP">BP</option>
                            <option id="showDeptUserBaru" value="CMS">CMS</option>
                            <option id="showDeptUserBaru" value="GO">GO</option>
                            <option id="showDeptUserBaru" value="ME">ME</option>
                            <option id="showDeptUserBaru" value="MNF">MNF</option>
                            <option id="showDeptUserBaru" value="RND">RND</option>
                            <option id="showDeptUserBaru" value="QA/QC">QA/QC</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button onclick="closeShow()" class="btn btn-danger btn-sm" style="width: 80px;"><i class="fa fa-times"></i>  CLOSE</button>
            </div>
        </div>
    </div>
</div>