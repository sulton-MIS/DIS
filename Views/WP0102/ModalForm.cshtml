<style>
    .plus-image {
        position: absolute;
        top: 50%;
        left: 50%;
        font-size: 80px;
        color: #4ce43173 !important;
        /* bring your own prefixes */
        transform: translate(-50%, -50%);
    }

    .plus-image:hover {
        color: #4ce431 !important;
        cursor:pointer;
    }

    .plus-image-edit {
        position: absolute;
        top: 50%;
        left: 50%;
        font-size: 80px;
        color: #4ce43173 !important;
        /* bring your own prefixes */
        transform: translate(-50%, -50%);
    }

        .plus-image-edit:hover {
            color: #4ce431 !important;
            cursor: pointer;
        }
</style>

<!--form add new data-->
<div id="modalForm" class="modal fade" style="z-index:1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Add new Area Master</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">AREA CD</label>
                        <input type="text" maxlength="50" id="addAreaCode" class="form-control" placeholder="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">AREA NAME</label>
                        <input type="text" maxlength="20" id="addAreaName" class="form-control" placeholder="">
                    </div>
                    <div class="col-md-6">
                        <label>AREA STATUS</label>
                        <select class="form-control" id="addAreaStatus">
                            <option value="1">Active</option>
                            <option value="2">Non Active</option>
                        </select>
                    </div>
                </div>
                <div classs="row">
                    <div class="col">
                        <label class="required">IMAGE AREA</label>
                        <input id="addFoto" onchange="change_image('add',this)" type="file" />
                        <img onerror="this.style.display='none'" id="addImageBox" style="width: 100%; height:250px" />
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!--form edit data-->
<div id="modalEditForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Edit Area Master</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">AREA CD</label>
                        <input type="text" maxlength="50" id="editAreaCode" class="form-control" placeholder="">
                        <input style="display:none" type="text" maxlength="50" id="EditID" class="form-control" placeholder="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">AREA NAME</label>
                        <input type="text" maxlength="20" id="editAreaName" class="form-control" placeholder="">
                    </div>
                    <div class="col-md-6">
                        <label>AREA STATUS</label>
                        <select class="form-control" id="editAreaStatus">
                            <option selected="selected" value="1">Active</option>
                            <option value="2">Not Active</option>
                        </select>
                    </div>
                </div>
                <div classs="row">
                    <div class="col">
                        <label>IMAGE AREA</label>
                        <input style="display:none" id="editFoto" onchange="change_image('edit',this)" type="file" /><br />
                        <button onclick="$('#editFoto').click()" id="editFakeFoto" style="color:black">Choose File</button>  <label id="editFileName"></label>
                        <img onerror="this.style.display='none'" id="editImageBox" style="width: 100%; height:250px" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="edit_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 85px;"><i class="fa fa-check"></i> UPDATE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>
