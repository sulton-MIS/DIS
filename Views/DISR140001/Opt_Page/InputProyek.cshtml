<style>
    .cstm_btn {
        display: inline-block;
        background-color: green;
        height: 35px;
        width: 150px;
        color: white;
        border: 1px solid;
        border-radius: 3px 3px 5px;
        background-position: center;
        transition: background 0.8s;
    }

        .cstm_btn:hover {
            background: #808080 radial-gradient(circle, transparent 1%, #808080 1%) center/15000% border-box;
        }

        .cstm_btn:active {
            border: 1px solid black;
            background-color: forestgreen;
            background-size: 100%;
            transition: background 0s;
        }

    .btn_input {
        display: inline-block;
        cursor: pointer;
        background-color: green;
        height: 35px;
        width: 150px;
        color: white;
        border: 1px solid;
        border-radius: 3px 3px 5px;
        background-position: center;
        transition: background 0.8s;
    }

        .btn_input:hover {
            background: #808080 radial-gradient(circle, transparent 1%, #808080 1%) center/15000% border-box;
        }

        .btn_input:active {
            border: 1px solid black;
            background-color: forestgreen;
            background-size: 100%;
            transition: background 0s;
        }
</style>

<div class="row">
    <div class="col-lg-6" style="border: 0px solid">
        <div class="form-group" style="display: none">
            <label>ID Bundle </label>
            <input type="hidden" id="BUNDLE_ID" value="0" />
            <input type="text" maxlength="25" class="form-control space-input" id="TXT_ADD_BUNDLECODE" placeholder="Auto Generate" disabled>
        </div>
        <div class="form-group row">
            <div class="col-lg-6" style="margin-top: 5px">
                <label>NIK Opr <span style="color:red">*</span></label>
                <input id="addNik" type="number" class="form-control" data-index="1"/>
            </div>
            <div class="col-lg-6" style="margin-top: 5px">
                <label>Nama Opr </label>
                <input id="addNama" type="text" class="form-control" disabled="" />
            </div>
            <div class="col-lg-6" style="margin-top: 5px">
                <label>ID Produksi <span style="color:red">*</span></label>
                <input id="addIDProduksi" type="text" class="form-control" maxlength="20" data-index="2"/>
            </div>
            <div class="col-lg-3" style="margin-top: 5px">
                <label>Dmc Code </label>
                <input id="addDmcCode" type="text" class="form-control" disabled="" />
            </div>
            <div class="col-lg-3" style="margin-top: 5px">
                <br>
                <button type="button" class="btn btn-default btn-sm" onclick="Clear_IDProd()" style="width: 80px;"> Clear</button>
            </div>
            <div class="col-lg-6" style="margin-top: 5px">
                <label>ID Proses <span style="color:red">*</span></label>
                <input id="addIDProses" type="text" class="form-control" data-index="3"/>
            </div>
            <div class="col-lg-6" style="margin-top: 5px">
                <label>Nama Proses </label>
                <input id="addNamaProses" type="text" class="form-control" disabled="" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label>Jenis Lotto  <span style="color:red">*</span></label>
            </div>
            <div class="col-lg-2">
                <input type="radio" name="JenisLotto" class="input-project" id="RD_Serial" data-index="4"/> Serial
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Barcode <i class="fa fa-check"></i></font>
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Unique <i class="fa fa-check"></i></font>
            </div>
            <div class="col-lg-2">
                <input type="radio" name="JenisLotto" class="input-project" id="RD_Digital" /> Digital
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Barcode <i class="fa fa-check"></i></font>
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Unique <i class="fa fa-times"></i></font>
            </div>
            <div class="col-lg-2">
                <input type="radio" name="JenisLotto" class="input-project" id="RD_Standard" /> Standard
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Barcode <i class="fa fa-times"></i></font>
                <br> &nbsp;&nbsp;&nbsp; <font size="1px">Unique <i class="fa fa-times"></i></font>
            </div>
            <div class="col-lg-6" style="margin-top: 5px">
                <button type="button" class="btn btn-default btn-sm" onclick="Clear_Lotto()" style="width: 80px;"> Clear</button>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-6">
                <label>Serial <span style="color:red">*</span></label>
                <input id="addSerial" type="text" class="form-control" oninput="eventAutoTypingSerial()" data-index="5"/>
            </div>
            <div class="col-lg-3">
                <label>Lot No </label>
                <input id="addLotNo" type="text" class="form-control" disabled="" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Masukkan Berat <span style="color:red">*</span></label>
                <input id="input_berat" type="number" class="form-control" @*oninput="eventInputBerat()"*@ data-index="6" />
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-lg-12">
                <label><strong>Keterangan </strong></label>
                <textarea type="text" class="form-control space-input input-project" id="TXT_ADD_NOTED" placeholder="Noted" style="height: 100px;"></textarea>
            </div>
        </div>

        <div class="row" style="margin-top: 5px;">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-primary btn-xs pull-right" id="BTN_ADD_SHOW_DETAIL" style="width: 80px;" data-index="7"><i class="fa fa-plus"></i> Save </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*===================================================== DETAIL ===================================================================================*@
    <div class="col-lg-6" style="">
        <div class="row" style="margin-top: 0px;">
            <div class="col-lg-12">
                <label><strong>Data Grid Serial (PCS)</strong></label>
            </div>
        </div>
        <div class="row" style="">
            <div class="row space-bottom">
                <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
                    <div style="border: 1px solid #ccc; overflow:scroll; position: relative;">
                        <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                        <div id="tScrollHead" style="width: 100%; border-right:1px solid #fff">
                            <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                                <thead>
                                    <tr>
                                        <th style="width: 20%;">ID Produksi</th>
                                        <th style="width: 15%;">Dmc Code</th>
                                        <th style="width: 10%;">ID Proses</th>
                                        <th style="width: 20%;">Nama Proses</th>
                                        <th style="width: 15%;">Serial</th>
                                        <th style="width: 10%;">Lot No</th>
                                        @*<th style="width: 15%;">Rata - Rata Aktual</th>*@
                                        <th style="width: 20%;">Nama Opr</th>
                                        <th style="width: 15%;"> Action </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <!--data grid detail-->
                        <div id="tScrollBody" style="height: 180px;">
                            <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                                <tbody id="TBL_ADD_DETAIL" style="display: none;">
                                    <tr>
                                        <td style="width: 20%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_IDPROD" maxlength="50">
                                        </td>
                                        <td style="width: 15%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_DMCCODE">
                                        </td>
                                        <td style="width: 10%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_IDPROSES">
                                        </td>
                                        <td style="width: 20%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_NAMAPROSES">
                                        </td>
                                        <td style="width: 15%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_SERIAL">
                                        </td>
                                        <td style="width: 10%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_LOTNO">
                                        </td>
                                        @*<td style="width: 15%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_BERAT_PCS">
                                        </td>*@
                                        <td style="width: 20%; padding:0!important">
                                            <input type="text" disabled class="form-control space-input" id="TXT_ADD_NAMA">
                                        </td>
                                        <td style="width: 15%">
                                            <button type="button" id="BTN_ADD_DETAIL_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                        </td>
                                    </tr>
                                </tbody>

                                <tbody id="TBL_LIST_DETAIL">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row" style="">
                <div class="col-sm-6 ">
                    <label><strong>Berat per bundle (Gram) :</strong></label>
                    <div class="col-md-12 section-wrapper-1">
                        <div class="col-lg-3">
                            <label>Standard </label>
                            <input id="addBeratBundleStandar" value="0" type="text" class="form-control" disabled="" />
                        </div>
                        <div class="col-lg-3">
                            <label>Aktual </label>
                            <input id="addBeratBundleAktual" type="number" class="form-control" oninput="AutoBeratBundleAct()" value="0" disabled />
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 ">
                    <label><strong>Jumlah per bundle (Pcs) :</strong></label>
                    <div class="col-md-12 section-wrapper-1">
                        <div class="col-lg-3">
                            <label>Standard </label>
                            <input id="addJumlahBundleStandar" value="0" type="text" class="form-control" disabled="" />
                        </div>
                        <div class="col-lg-3">
                            <label>Aktual </label>
                            <input id="addJumlahBundleAktual" value="0" type="text" class="form-control" disabled="" />
                        </div>
                    </div>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <label><strong>Berat per pcs (Gram) :</strong></label>
                    <div class="col-md-12 section-wrapper-1">
                        <label>Standard </label>
                        <input id="addBeratPcsStandar" value="0" type="text" class="form-control" disabled="" />
                    </div>
                </div>

                <div class="col-sm-6">
                    <br />
                    <div class="col-md-12 section-wrapper-1" style="margin-top: 2px;">
                        <label>Rata - rata Aktual </label>
                        <input id="addBeratPcsAktual" value="0" type="text" class="form-control" disabled="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label><strong>Status Lotto </strong></label>
                <input type="text" maxlength="25" class="form-control space-input" id="addStatusLotto" disabled>
            </div>
            
        </div>
        <div class="row" id="GroupSave">
            @*<button type="button" onclick="saveAsDraft()" class="btn btn-info btn-sm submitbtn">Save as Draft</button>*@
            @*<button type="button" onclick="SubmitTrx()" class="btn btn-success btn-sm"><span id="spnsubmit">Submit & Print</span></button>*@
            @*<button id="spnsubmit" type="button" onclick="SubmitTrx()" class="btn_input">Submit & Print</button>*@
            <button id="spnsubmit" type="button" onclick="SubmitTrx()" class="cstm_btn">Submit & Print</button>
            <button type="button" class="btn btn-danger btn-sm" onclick="cancelAdd()">Cancel</button>
            <asp:button type="button" id="btnPrint" runat="server" class="btn btn-primary btn-sm center" OnClick="PrintPanel()" style="width: 80px; visibility: hidden" data-dismiss="modal">  Print </asp:button>
        </div>
        
        <div class="row body" id="printbody">

        </div>

    </div>
