@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001Detail> DataWP = (List<DISA150001Detail>)ViewData["DataDISA150001"];
}

<style>
    #myProgress {
        width: 100%;
        background-color: #ddd;
    }

    #myBar {
        width: 0%;
        height: 30px;
        background-color: #04AA6D;
        text-align: center;
        line-height: 30px;
        color: white;
    }


    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0px 5px 0px 5px !important;
    }

    #tbl1 {
        width: 40%;
        border: 1px solid;
    }

    #tbl2 {
        position: relative;
        border: 1px solid;
        margin-top: -255px;
        margin-left: 350px;
    }

    #tbl3 {
        border: 1px solid;
    }

        #tbl3 #tdlotsize {
            text-align: right;
        }

    /*sales price*/
    #tbl_sls_price1 {
        width: 40%;
    }

        #tbl_sls_price1 table {
            background-color: aquamarine;
        }

    #tbl_sls_price2 {
        position: relative;
        margin-top: -185px;
        margin-left: 320px;
        width: 40%;
    }

        #tbl_sls_price2 table {
            background-color: aquamarine;
        }

    #tbl_sls_price3 {
        width: 40%;
    }

        #tbl_sls_price3 table {
            background-color: aquamarine;
        }

    #tbl_sls_price4 {
        position: relative;
        margin-top: -215px;
        margin-left: 320px;
        margin-bottom: 100px;
        width: 40%;
    }

        #tbl_sls_price4 table {
            background-color: aquamarine;
        }

    th[title]:hover::after {
        content: attr(title);
        position: absolute;
        top: -100%;
        left: 0;
    }
</style>

<script>
    //$("tr").click(function () {
    //    $(this).addClass("selected").siblings().removeClass("selected");
    //});

    var trs = document.querySelectorAll("tr");
    for (var i = 0; i < trs.length; i++) {
        trs[i].addEventListener("click", function () {
            if (this.className.indexOf("selected") == 0)
                this.className = "";
            else
                this.className = "selected";
        });
    }
</script>
<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed;">
                    <thead back>
                        <tr>
                            <th style="width: 60px; background: #A3F7F1;" rowspan="2" title=""><strong>DETAIL</strong>
                            <th style="width: 40px; background: #A3F7F1;" rowspan="2" title=""><strong>NO.</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2" title="Master Type Customer"><strong>DMC TYPE</strong>
                            <th style="width: 300px; background: #A3F7F1;" rowspan="2" title="Master Type Customer"><strong>CUSTOMER</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2" title="Master Type Customer"><strong>LOT SIZE</strong>
                            <th style="width: 700px; background: #A3F7F1;" colspan="7"><strong>SALES PRICE</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2" title="Master Type Customer"><strong>WIS</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2" title="BOM Tpics"><strong>Cavity Film</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2"><strong>Cavity Glass</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2"><strong>Cavity Tail</strong>
                            <th style="width: 80px; background: #A3F7F1;" rowspan="2"><strong>Type</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2"><strong>Rank</strong>
                            <th style="width: 50px; background: #A3F7F1;" rowspan="2"><strong>Inch</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"><strong>Material Cost</strong>
                            <th style="width: 600px; background: #A3F7F1;" colspan="6"><strong>LABOUR COST</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"
                                title="TOTAL_DIRECT_LABOUR = LABOUR_COST_PRINTING + LABOUR_COST_NON_PRINTING + LABOUR_COST_ETCHING + LABOUR_COST_PRESS + LABOUR_COST_ASSEMBLY + LABOUR_COST_KOMPO">
                                <strong>
                                    Total Labour
                                </strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"><strong>In-Direct Labour</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"><strong>SGA</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TRANSPORTASI JPN</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TRANSPORTASI SHA</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TRANSPORTASI HKG</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TOTAL COST JPN</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TOTAL COST SHA</strong>
                            <th style="width: 200px; background: #A3F7F1;" colspan="2"><strong>TOTAL COST HKG</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"><strong>Total Cost FOB</strong>
                            <th style="width: 100px; background: #A3F7F1;" rowspan="2"><strong>Prod Yield Film</strong>
                        </tr>
                        <tr>
                            <th style="width: 100px; background: #6fb3e0;"><strong>Mass Pro AIR CIF JPN</strong>
                            <th style="width: 100px; background: #6fb3e0;"><strong>Mass Pro SEA CIF JPN</strong>
                            <th style="width: 100px; background: #87b87f;"><strong>Mass Pro AIR CIF SHA</strong>
                            <th style="width: 100px; background: #87b87f;"><strong>Mass Pro SEA CIF SHA</strong>
                            <th style="width: 100px; background: #ffb752;"><strong>Mass Pro AIR CIF HKG</strong>
                            <th style="width: 100px; background: #ffb752;"><strong>Mass Pro SEA CIF HKG</strong>
                            <th style="width: 100px; background: #F296F8;"><strong>Mass Pro FOB</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Printing</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Non Printing</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Etching</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Press</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Assy</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Konpo</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Air Cif Jpn</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial"><strong>Sea Cif Jpn</strong>
                            <th style="width: 100px; background: #A3F7F1; "><strong>Air Cif Sha</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial"><strong>Sea Cif Sha</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Air Cif Hkg</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial"><strong>Sea Cif Hkg</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Air Cif Jpn</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial"><strong>Sea Cif Jpn</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Air Cif Sha</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial"><strong>Sea Cif Sha</strong>
                            <th style="width: 100px; background: #A3F7F1;"><strong>Air Cif Hkg</strong>
                            <th style="width: 100px; background: #A3F7F1; border: initial">
                                <strong>Sea Cif Hkg</strong>
                                @*<th style="width: 200px;">Printing</strong>
                                <th style="width: 200px;">Non-Printing</strong>
                                <th style="width: 200px;">Etching</strong>
                                <th style="width: 200px;">Press</strong>
                                <th style="width: 200px;">Assembly</strong>
                                <th style="width: 200px; border: initial">Konpo</strong>*@
                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="25" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 450px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001Detail item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 60px">
                                                <button type="button" id="@item.ID" class="btn btn-success btn-xs" onclick="reloadDetail(this)" style="display: inline-block;">Show</button>
                                            </td>
                                            <td class="align-right align-middle" style="width: 40px"> @item.ROW_NUM </td>
                                            <td style="width: 100px"> @item.DMC_TYPE </td>
                                            <td style="width: 300px"> @item.CUSTOMER </td>
                                            <td class="align-right align-middle" style="width: 50px"> @item.LOT_SIZE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#6fb3e0;"> @item.AIR_CIF_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#6fb3e0;"> @item.SEA_JPN_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#87b87f;"> @item.AIR_SHA_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#87b87f;"> @item.SEA_SHA_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#ffb752;"> @item.AIR_HKG_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#ffb752;"> @item.SEA_HKG_SALES_PRICE </td>
                                            <td class="align-right align-middle" style="width: 100px; background:#F296F8;"> @item.FOB_SALES_PRICE </td>
                                            @*<td class="align-right align-middle" style="width: 300px"> @item.EngineeringSample </td>*@
                                            <td class="align-right align-middle" style="width: 50px"> @item.VERSI_WIS </td>
                                            <td class="align-right align-middle" style="width: 50px"> @item.CAVITY_FILM </td>
                                            <td class="align-right align-middle" style="width: 50px"> @item.CAVITY_GLASS </td>
                                            <td class="align-right align-middle" style="width: 50px"> @item.CAVITY_TAIL </td>
                                            <td style="width: 80px"> @item.TOUCH_PANEL_TYPE </td>
                                            <td class="align-center align-middle" style="width: 50px"> @item.RANK </td>
                                            <td class="align-right align-middle" style="width: 50px"> @item.TOUCH_PANEL_SIZE </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.AIR_CIF_MATERIAL_COST </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_PRINTING </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_NON_PRINTING </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_ETCHING </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_PRESS </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_ASSEMBLY </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_COST_KOMPO  </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_DIRECT_LABOUR </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.INDIRECT_LABOUR </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LABOUR_SGA </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.AIR_JPN </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.SEA_TOKYO </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.AIR_SHA </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.SEA_SHA </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.AIR_HKG </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.SEA_HKG </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_AIR_JPN </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_SEA_TOKYO </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_AIR_SHA </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_SEA_SHA </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_AIR_HKG </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_SEA_HKG </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.TOTAL_COST_FOB </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.YIELD_TOTAL_FILM </td>

                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>       
        <div id="myProgress">
            <div id="myBar"></div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("ProdCost/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>

        </table>
    </div>

</div>
