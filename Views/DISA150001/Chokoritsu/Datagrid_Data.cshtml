@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001_Chokoritsu_Master> DataWP = (List<DISA150001_Chokoritsu_Master>)ViewData["DataDISA150001"];
    //List<DISA150001_Chokoritsu> Status_Cmb = (List<DISA150001_Chokoritsu>)ViewData["Status_Cmb"];
    //List<DISA150001_Chokoritsu> Time_Cmb = (List<DISA150001_Chokoritsu>)ViewData["Time_Cmb"];
    //List<DISA150001_Chokoritsu> ExecTime_Cmb = (List<DISA150001_Chokoritsu>)ViewData["Time_Cmb"];
    //List<DISA150001_Chokoritsu> Model_type = (List<DISA150001_Chokoritsu>)ViewData["Model_type"];

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}


<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }
    /* #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }*/

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 100px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>
                            <th style="width: 40px;" rowspan="2">No</th>
                            <th style="width: 300px;" rowspan="2">Dmc Type</th>
                            <th style="width: 150px;" rowspan="2">Yield Printing Film</th>
                            <th style="width: 200px;" rowspan="2">Yield Printing Glass</th>
                            <th style="width: 200px;" rowspan="2">Yield Printing Tail</th>
                            <th style="width: 200px;" rowspan="2">Yield Printing Overlay</th>
                            <th style="width: 150px;" rowspan="2">Yield Scribe</th>
                            <th style="width: 200px;" rowspan="2">Yield Film Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Film Kabu Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Glass Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Overlay Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Tail Electrical</th>
                            <th style="width: 200px;" rowspan="2">Yield Tail Cosmetic</th>
                            <th style="width: 200px;" rowspan="2">Yield Assembly</th>
                            <th style="width: 200px;" rowspan="2">Yield Final Assy</th>
                            <th style="width: 200px;" rowspan="2">Yield Electrical Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Final Inspection</th>
                            <th style="width: 200px;" rowspan="2">Yield Denki Film</th>
                            <th style="width: 200px;" rowspan="2">Yield Denki Glass</th>
                        </tr>
                        <!--<tr>-->
                        @*Colspan Dari "Created"*@
                        <!--<th style="width: 150px; ">By</th>
                        <th style="width: 150px; border: initial; ">Date</th>-->
                        @*Colspan Dari "Created"*@
                        <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>
                        </tr>-->
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="19" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 650px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001_Chokoritsu_Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 100px; text-align: center;" class="grid-checkbox-col">
                                                <input class="grid-checkbox" value="@item.ID,@item.DMC_TYPE,@item.YIELD_PRINTING_FILM,@item.YIELD_PRINTING_GLASS,@item.YIELD_PRINTING_TAIL,@item.YIELD_PRINTING_OVERLAY,@item.YIELD_SCRIBE,@item.YIELD_FILM_MIDLE_INSPECTION,@item.YIELD_FILM_KABU_MIDLE_INSPECTION,@item.YIELD_GLASS_MIDLE_INSPECTION,@item.YIELD_OVERLAY_MIDLE_INSPECTION,@item.YIELD_TAIL_ELECTRICAL,@item.YIELD_TAIL_COSMETIC,@item.YIELD_ASSEMBLY,@item.YIELD_FINAL_ASSEMBLY,@item.YIELD_ELECTRICAL_INSPECTION,@item.YIELD_FINAL_INSPECTION,@item.YIELD_DENKI_FILM,@item.YIELD_DENKI_GLASS" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                            </td>
                                            <td style="width: 40px">
                                                @item.ROW_NUM
                                            </td>
                                            <td style="width: 300px">@item.DMC_TYPE</td>
                                            <td style="width: 150px">@item.YIELD_PRINTING_FILM</td>
                                            <td style="width: 200px">@item.YIELD_PRINTING_GLASS</td>
                                            <td style="width: 200px">@item.YIELD_PRINTING_TAIL</td>
                                            <td style="width: 200px">@item.YIELD_PRINTING_OVERLAY</td>
                                            <td style="width: 150px">@item.YIELD_SCRIBE</td>
                                            <td style="width: 200px">@item.YIELD_FILM_MIDLE_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_FILM_KABU_MIDLE_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_GLASS_MIDLE_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_OVERLAY_MIDLE_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_TAIL_ELECTRICAL</td>
                                            <td style="width: 200px">@item.YIELD_TAIL_COSMETIC</td>
                                            <td style="width: 200px">@item.YIELD_ASSEMBLY</td>
                                            <td style="width: 200px">@item.YIELD_FINAL_ASSEMBLY</td>
                                            <td style="width: 200px">@item.YIELD_ELECTRICAL_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_FINAL_INSPECTION</td>
                                            <td style="width: 200px">@item.YIELD_DENKI_FILM</td>
                                            <td style="width: 200px">@item.YIELD_DENKI_GLASS</td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Chokoritsu/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>