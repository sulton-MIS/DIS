@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001_Transport_Master> ListCodeTrans = (List<DISA150001_Transport_Master>)ViewData["Code_Trans"];
}

<style>
    #tableSearch {
        border-spacing: 10px;
        border-collapse: separate;
    }

    .section-pagetitle {
        margin-top: 15px;
        margin-bottom: 10px;
        color: #343a40;
        padding-left: 10px;
        border-left: 4px solid #4662D4;
        text-transform: uppercase;
        font-weight: 700;
        font-size: 18px;
        line-height: 18px;
        letter-spacing: .5px;
    }
</style>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-11" style="margin-left: 20px;">
        <div class="section-pageheader">
            <h6 class="section-pagetitle"><strong>MASTER TRANSPORTATION</strong></h6>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form role="form" class="form-horizontal" id="searchForm">
                    <div class="row" style="margin-bottom: -25px;margin-top: -10px">
                        <div class="col-md-12">
                            <table id="tableSearch" style="width:100%">
                                <tr>
                                    <td><strong>Item Code :</strong></td>
                                    <td>
                                        <input id="searchItemCode" type="text" class="form-control" />
                                    </td>
                                    <td><strong>Jenis Transportation :</strong></td>
                                    <td>
                                        <select class="form-control select2" id="searchJenisTransportation" required>
                                            <option value="" selected="selected" style="font-style: italic; color: gray"> --- PILIH DMC Code --- </option>
                                            @{
                                                if (ListCodeTrans != null)
                                                {
                                                    if (ListCodeTrans.Count() > 0)
                                                    {
                                                        foreach (DISA150001_Transport_Master item in ListCodeTrans)
                                                        {
                                                            <option value="@item.code_trans">@item.jenis_transportation</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                        @*<select class="form-control" id="searchJenisTransportation" name="dropdown">
                                                <option id="searchJenisTransportation" value="Trans Cost Air JPN" selected="selected"> Trans Cost Air JPN </option>
                                                <option id="searchJenisTransportation" value="Trans Cost Sea Tokyo" selected="selected"> Trans Cost Sea Tokyo </option>
                                                <option id="searchJenisTransportation" value="Trans Cost Air Sha" selected="selected"> Trans Cost Air Sha </option>
                                                <option id="searchJenisTransportation" value="Trans Cost Sea Sha" selected="selected"> Trans Cost Sea Sha </option>
                                                <option id="searchJenisTransportation" value="Trans Cost Air Hkg" selected="selected"> Trans Cost Air Hkg </option>
                                                <option id="searchJenisTransportation" value="Trans Cost Sea Hkg" selected="selected"> Trans Cost Sea Hkg </option>
                                                <option id="searchJenisTransportation" value="" selected="selected"> -- Pilih Transportation --</option>
                                            </select>*@
                                    </td>
                                    @*<td><strong>Transportation Cost : </strong></td>
                                        <td>
                                            <input id="searchTransportationCost" type="text" class="form-control" />
                                        </td>*@

                                    <td style="text-align:right;padding:0!important">
                                        <img id="_reloading" src="Content/Bootstrap/img/loading.gif" alt="Please Wait" style="width: 30px; height: 30px; margin-right: 4px; opacity: 0;" />
                                        <button type="button" class="btn btn-primary btn-xs" id="btn_search" style="width: 80px;"><i class="fa fa-search"></i> Search</button>
                                        <button type="button" onclick="clear_search()" class="btn btn-grey btn-xs" id="btn_clear" style="width: 80px;" onclick="clear_search"><i class="fa fa-eraser"></i> Clear</button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="hr hr-10" style="margin-bottom: 10px"></div>
                        <div class="col-xs-12 col-sm-12 col-md-7">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-5 text-right">
                            <img id="_reloading" src="Content/Bootstrap/img/loading.gif" alt="Please Wait" style="width: 30px; height: 30px; margin-right: 4px; opacity: 0;" />
                            @*<button type="button" class="btn btn-primary btn-xs" id="btn_new" style="width: 80px;" onclick=""><i class="fa fa-plus"></i> New</button>
                            <button type="button" class="btn btn-primary btn-xs" id="btn_edit" style="width: 80px;" onclick=""><i class="fa fa-pencil-square-o"></i> Edit</button>
                            <button type="button" class="btn btn-danger btn-xs" id="btn_Delete" style="width: 80px;" onclick=""><i class="fa fa-trash-o"></i> Delete</button>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>