@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001_ConvTable_Master> DataWP = (List<DISA150001_ConvTable_Master>)ViewData["DataDISA150001"];
    //List<DISA150001_ConvTable> Status_Cmb = (List<DISA150001_ConvTable>)ViewData["Status_Cmb"];
    //List<DISA150001_ConvTable> Time_Cmb = (List<DISA150001_ConvTable>)ViewData["Time_Cmb"];
    //List<DISA150001_ConvTable> ExecTime_Cmb = (List<DISA150001_ConvTable>)ViewData["Time_Cmb"];
    //List<DISA150001_ConvTable> Model_type = (List<DISA150001_ConvTable>)ViewData["Model_type"];

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}

<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 100px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>                          
                            <th style="width: 40px;" rowspan="2">No</th>
                            <th style="width: 300px;" rowspan="2">Item Code</th>
                            <th style="width: 150px;" rowspan="2">Parts</th>
                            <th style="width: 200px;" rowspan="2">Size Product</th>
                            <th style="width: 200px;" rowspan="2">Type</th>
                            <th style="width: 200px;" rowspan="2">Bundle Qty</th>
                            <th style="width: 150px;" rowspan="2">Inner Qty</th>
                            <th style="width: 200px;" rowspan="2">Master Qty</th>
                            <th style="width: 200px;" rowspan="2">Inner Type</th>
                            <th style="width: 200px;" rowspan="2">Inner L</th>
                            <th style="width: 200px;" rowspan="2">Inner W</th>
                            <th style="width: 200px;" rowspan="2">Inner H</th>
                            <th style="width: 200px;" rowspan="2">Inner Weight</th>
                            <th style="width: 200px;" rowspan="2">Master Type</th>
                            <th style="width: 200px;" rowspan="2">Master L</th>
                            <th style="width: 200px;" rowspan="2">Master W</th>
                            <th style="width: 200px;" rowspan="2">Master H</th>
                            <th style="width: 200px;" rowspan="2">Master Weight</th>
                        </tr>                      
                        <!--<tr>-->
                            @*Colspan Dari "Created"*@
                            <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>-->
                            @*Colspan Dari "Created"*@
                            <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>
                        </tr>-->
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="19" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 550px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001_ConvTable_Master item in DataWP)
                                    {                                       
                                                <tr id="row-@number" class="row-@item.ID">
                                                    <td style="width: 100px; text-align: center;" class="grid-checkbox-col">
                                                        <input class="grid-checkbox" value="@item.ID,@item.ItemCode,@item.Parts,@item.SizeProduct,@item.type,@item.BundleQty,@item.InnerQty,@item.MasterQty,@item.InnerType,@item.InnerL,@item.InnerW,@item.InnerH,@item.InnerWeight,@item.MasterType,@item.MasterL,@item.MasterW,@item.MasterH,@item.MasterWeight" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                                    </td>
                                                    <td style="width: 40px">
                                                        @item.ROW_NUM
                                                    </td>
                                                    <td style="width: 300px">@item.ItemCode</td>
                                                    <td style="width: 150px">@item.Parts</td>
                                                    <td style="width: 200px">@item.SizeProduct</td>
                                                    <td style="width: 200px">@item.type</td>
                                                    <td style="width: 200px">@item.BundleQty</td>
                                                    <td style="width: 150px">@item.InnerQty</td>
                                                    <td style="width: 200px">@item.MasterQty</td>
                                                    <td style="width: 200px">@item.InnerType</td>
                                                    <td style="width: 200px">@item.InnerL</td>
                                                    <td style="width: 200px">@item.InnerW</td>
                                                    <td style="width: 200px">@item.InnerH</td>
                                                    <td style="width: 200px">@item.InnerWeight</td>
                                                    <td style="width: 200px">@item.MasterType</td>
                                                    <td style="width: 200px">@item.MasterL</td>
                                                    <td style="width: 200px">@item.MasterW</td>
                                                    <td style="width: 200px">@item.MasterH</td>
                                                    <td style="width: 200px">@item.MasterWeight</td>
                                                </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("ConvTable/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>