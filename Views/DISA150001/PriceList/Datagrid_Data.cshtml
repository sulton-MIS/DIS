@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001PriceList> DataWP = (List<DISA150001PriceList>)ViewData["DataPriceListDISA150001"];
}


<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }
    /* #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }*/

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>
<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead back>
                        <tr>
                            <th style="width: 40px;">NO.</th>
                            <th style="width: 200px;">DMC TYPE</th>
                            <th style="width: 250px;">CUSTOMER</th>
                            <th style="width: 100px;">TOUCH PANEL TYPE</th>
                            <th style="width: 100px;">TOUCH PANEL SIZE</th>
                            <th style="width: 100px;">WIS EDITION</th>
                            <th style="width: 100px;">YIELD TOTAL FILM</th>
                            <th style="width: 250px;">JENIS TRANSPORTATION</th>
                            <th style="width: 100px;">LOT 10</th>
                            <th style="width: 100px;">LOT 20</th>
                            <th style="width: 100px;">LOT 50</th>
                            <th style="width: 100px;">LOT 100</th>
                            <th style="width: 100px;">LOT 200</th>
                            <th style="width: 100px;">LOT 300</th>
                            <th style="width: 100px;">LOT 400</th>
                            <th style="width: 100px;">LOT 500</th>
                            <th style="width: 100px;">LOT 1000</th>
                            <th style="width: 100px;">LOT 5000</th>
                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="20" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 500px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001PriceList item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td class="align-right align-middle" style="width: 40px"> @item.ROW_NUM </td>
                                            <td style="width: 200px"> @item.DMC_TYPE </td>
                                            <td style="width: 250px"> @item.CUSTOMER </td>
                                            <td style="width: 100px"> @item.TOUCH_PANEL_TYPE </td>
                                            <td style="width: 100px"> @item.TOUCH_PANEL_SIZE </td>
                                            <td style="width: 100px"> @item.VERSI_WIS </td>
                                            <td style="width: 100px"> @item.TOTAL_YIELD_FILM </td>                                                                                                                        
                                            <td style="width: 250px"> @item.JENIS_TRANSPORTATION </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_10 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_20 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_50 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_100 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_200 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_300 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_400 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_500 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_1000 </td>
                                            <td class="align-right align-middle" style="width: 100px"> @item.LOT_1000 </td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("WipCost/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
            <div id="myProgress">
                <div id="myBar"></div>
            </div>
        </table>
    </div>

</div>
