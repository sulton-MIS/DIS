    //tombol clear
    function clear_search_PriceList() {
        $('#searchDmcType').val('');     
        $.ajax({
            type: "POST",
            url: SITE_URL + '../Search_Data_PriceList',
            async: false,
            data: {
                start: 1,
                display: 25,
                DATA_ID: $("#data_nm").val(),
                DMC_TYPE: DMC_TYPE
            },
            success: function (data) {
                $("#GridTable").html(data);
                $("#paging").val(Last_Record_Per_Page);
                if ($('#cntPage').val() == "1") {
                    $('#btn_clear').prop('disabled', false);
                    $('#btn_edit').prop('disabled', true);
                    $('#btn_Delete').prop('disabled', true);
                } else {
