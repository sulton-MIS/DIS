    // tombol pencarian data ID Produksi
    function OnSearch(page) {
        searchData(page, $('#paging').val());
        $('#btn_download').prop('disabled', false);
        $('#btn_clear').prop('disabled', false);
    }

    // proses pencarian data ID Produksi
    function searchData(page, size) {
        var NAMA_MESIN = $("#searchNamaMesin").val();
        var STATUS = $("#searchStatus").val();
        var CREATED_BY = $("#searchCreatedBy").val();
        var CREATED_DATE_FROM = ($('#searchCreatedDateFrom').val()).replace('T', ' ');
        var CREATED_DATE_TO = ($('#searchCreatedDateTo').val()).replace('T', ' ');

        Last_Record_Per_Page = $("#paging").val();

        $.ajax({
            type: "POST",
            url: SITE_URL + '../Search_Data_History',
            async: false,
            data: {
                start: page,
                display: size,
                DATA_ID: $("#data_nm").val(),
                EXECUTION_TIME: $("#exec_time_cd").val(),
                TIME_UNIT_CRITERIA: $("#time_unit_cd").val(),
                STATUS_ACTIVE: $("#sts_cd").val(),
                NAMA_MESIN: NAMA_MESIN,
                STATUS: STATUS,
                CREATED_BY: CREATED_BY,
                CREATED_DATE_FROM: CREATED_DATE_FROM,
                CREATED_DATE_TO: CREATED_DATE_TO
            },
            success: function (data) {
                $("#GridTable").html(data);
                $("#paging").val(Last_Record_Per_Page);
                if ($('#cntPage').val() == "1") {
                    $('#btn_clear').prop('disabled', false);
                } else {
                    $('#btn_clear').prop('disabled', false);
                }

                scroll_and_checkbox();
                cek_perdata();
            }
        });


    }

    //tombol clear
    function clear_search() {
