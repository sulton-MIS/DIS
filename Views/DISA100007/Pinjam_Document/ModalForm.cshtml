
@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA100007Master;
@{
    List<DepartmentModel> Department = (List<DepartmentModel>)ViewData["nama_department"];
    List<SectionModel> Section = (List<SectionModel>)ViewData["nama_section"];

}

<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Form Add Master Document</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <label class="required">Nama Dokumen</label>
                            <input autocomplete="off" id="addNamaDokumen" required type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="required">Department</label>
                            <select required class="form-control" id="addDepartment" name="dropdown">
                                @*<option value="">- select -</option>*@
                                @{
                                    if (ViewData["RegNo"].ToString() == "PIC")
                                    {
                                        <option value="@ViewData["NAMA_DEPT_ALIAS"]" selected>@ViewData["NAMA_DEPT_ALIAS"]</option>
                                    }
                                    else
                                    {
                                        if (Department != null)
                                        {
                                            if (Department.Count() > 0)
                                            {
                                                foreach (DepartmentModel item in Department)
                                                {
                                                    <option value="@item.kode_dept">@item.nama_dept_alias</option>
                                                }
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                        @*<div class="col-md-6">
                            <label class="required">Department</label>
                            <select required class="form-control" id="addDepartment" name="dropdown">
                                @if (ViewData["RegNo"].ToString() == "PIC")
