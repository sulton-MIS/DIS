@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP03014Master;
@{
    List<WP03014Master> DataWP = (List<WP03014Master>)ViewData["DataWP03014"];
}

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 101.40%; border-right:17px solid #fff; position:sticky; top:0;">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed;">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center; " class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>
                            <th style="width: 60px;" rowspan="2"> No. </th>
                            <th style="width: 150px;" rowspan="2"> Registration No. </th>
                            <th style="width: 150px;" rowspan="2"> Worker Name </th>
                            <th style="width: 150px;" rowspan="2"> Project Code </th>
                            <th style="width: 150px;" rowspan="2"> Project Name </th>
                            <th style="width: 150px;" rowspan="2"> Company Code </th>
                            <th style="width: 150px;" rowspan="2"> Company Name </th>
                            <th style="width: 150px;" rowspan="2"> Date Join Project </th>
                            <th style="width: 150px;" rowspan="2"> Company Code From </th>
                            <th style="width: 150px;" rowspan="2"> Company Name From </th>
                            <th style="width: 150px;" rowspan="2"> Company Code To </th>
                            <th style="width: 150px;" rowspan="2"> Company Name To </th>
                            <th style="width: 150px;" rowspan="2"> Progress Status </th>
                            <th style="width: 180px;" colspan="2">Created</th>
                            <th style="width: 180px;" colspan="2">Changed</th>
                        </tr>
                        <tr>
                            <th style="width: 90px; ">By</th>
                            <th style="width: 90px; border: initial; ">Date</th>
                            <th style="width: 90px; ">By</th>
                            <th style="width: 90px; border: initial; ">Date</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 255px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (WP03014Master item in DataWP)
                                    {
                                                <tr id="row-@number" class="row-@item.ROW_NUM">
                                                    <td style="width: 60px;text-align: center;" class="grid-checkbox-col">
                                                        <input class="grid-checkbox" value="@item.ID,@item.ID_WORKER,@item.ID_PROJECT,@item.ID_COMPANY,@item.DATE_JOIN_PROJECT,@item.ID_COMPANY_FROM,@item.ID_COMPANY_TO"
                                                               type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                                    </td>
                                                    <td style="width: 60px"> @item.ROW_NUM </td>
                                                    <td style="width: 150px"> @item.REG_NO </td>
                                                    <td style="width: 150px"> @item.EMPLOYEE_NAME </td>
                                                    <td style="width: 150px"> @item.PROJECT_CODE </td>
                                                    <td style="width: 150px"> @item.PROJECT_NAME </td>
                                                    <td style="width: 150px"> @item.COMPANY_CODE </td>
                                                    <td style="width: 150px"> @item.COMPANY_NAME </td>
                                                    <td style="width: 150px"> @item.DATE_JOIN_PROJECT </td>
                                                    <td style="width: 150px"> @item.COMPANY_CODE_FROM </td>
                                                    <td style="width: 150px"> @item.COMPANY_NAME_FROM </td>
                                                    <td style="width: 150px"> @item.COMPANY_CODE_TO </td>
                                                    <td style="width: 150px"> @item.COMPANY_NAME_TO </td>
                                                    <td style="width: 150px"> @item.PROGRESS_STATUS </td>

                                                    <td style="width: 90px; text-align: center;"> @item.CREATED_BY </td>
                                                    <td style="width: 90px; text-align: center;"> @item.CREATED_DT.ToString("dd-MMM-yyy hh:mm:ss") </td>
                                                    <td style="width: 90px; text-align: center;"> @item.UPDATED_BY </td>
                                                    <td style="width: 90px; text-align: center;"> @item.UPDATED_DT.ToString("dd-MMM-yyy hh:mm:ss") </td>
                                                </tr>
                                        number++;
                                    }
                                }
                                else
                                {
                                    <tr id="NoDataFound">
                                        <td colspan="8" width="90%" class="text-center">No data found</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr id="NoDataFound">
                                    <td colspan="8" width="90%" class="text-center">No data found</td>
                                </tr>
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
