            status = false;
        }

        if (status == false) {
            return;
        }
        $('.modal-body').html('');

        $.ajax({
            url: 'WP03011/NameCardByScore',
            data: {
                regNumber : regNumber
            },
            success: function (e) {
                $('#modal-print').modal();
                $('.modal-body').html(e);
            },
            error: function (e) {
                toastr.warning('Data Reg Number : '+regNumber+' Not Found');
            }
        });

  
    }

