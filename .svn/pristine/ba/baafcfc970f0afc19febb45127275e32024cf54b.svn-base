SELECT	A.ID_TB_M_EMPLOYEE, 
		A.ID_TB_M_COMPANY, 
		A.FIRST_NAME +' '+ 
		A.LAST_NAME as NAME, 
		A.PHONE, 
		A.PIC_STATUS, 
		A.ANZEN_SERTIFICATE_NO ,
		B.COMPANY_CODE, 
		A.REG_NO, 
		D.DIV AS SECTION,
		A.ANZEN_DT_FROM,
		A.ANZEN_DT_TO
FROM TB_M_EMPLOYEE A
INNER JOIN TB_M_COMPANY B ON A.ID_TB_M_COMPANY = B.ID_TB_M_COMPANY
LEFT JOIN VW_DIVISION D ON D.DIV_ID = A.SECTION
WHERE A.IDENTITY_NO != '' 
AND ISNULL(A.SAFETY_INDUCTION_NO,'') <> ''
AND A.SAFETY_INDUCTION_TO >= CAST(GETDATE() AS DATE)
AND
	(B.COMPANY_CODE = 'TMMIN' OR (  B.COMPANY_CODE != 'TMMIN' AND
									[PIC_STATUS] IN ('PMP','PNG')))



