<div class="row">
    <div class="col-lg-12">
        <div class="form-group row">
            <div class="col-lg-2">
                <label class="control-label">Is Henkaten Enviroment :</label>
            </div>
            <div class="col-lg-2">
                <input style="width:100%" class="hk-dampak form-check-input form-control" type="checkbox" value="" id="WP02002_CHK_ADD_HKENV" name="WP02002_CHK_ADD_HKENV" onclick="showHenkatenEnviroment(this);">
            </div>
        </div>

        <div class="form-group row hkenv">
            <div class="col-lg-2">
                <label>New Process :</label>
            </div>
            <div class="col-lg-2">
                <input style="width:100%" class="hk-dampak form-check-input" type="checkbox" value="" id="WP02002_CHK_ADD_HKENVPROCESS" name="WP02002_CHK_ADD_HKENVPROCESS">
            </div>
        </div>

        <div class="form-group row hkenv">
            <div class="col-lg-2">
                <label>New Material / Chemical :</label>
            </div>
            <div class="col-lg-2">
                <input style="width:100%" class="hk-dampak form-check-input" type="checkbox" value="" id="WP02002_CHK_ADD_HKENVMATERIAL" name="WP02002_CHK_ADD_HKENVMATERIAL">
            </div>
        </div>

        <div class="form-group row hkenv">
            <div class="col-lg-2">
                <label>New Machine :</label>
            </div>
            <div class="col-lg-2">
                <input style="width:100%" class="hk-dampak form-check-input" type="checkbox" value="" id="WP02002_CHK_ADD_HKENVMACHINE" name="WP02002_CHK_ADD_HKENVMACHINE">
            </div>
        </div>

        <div class="form-group row hkenv">
            <div class="col-lg-2">
                <label>New Building :</label>
            </div>
            <div class="col-lg-2">
                <input style="width:100%" class="hk-dampak form-check-input" type="checkbox" value="" id="WP02002_CHK_ADD_HKENVBUILDING" name="WP02002_CHK_ADD_HKENVBUILDING">
            </div>
        </div>

        <div class="form-group row hkenv templateenv">
            <div class="col-lg-2">
                <label>Template :</label>
            </div>
            <div class="col-lg-4">
                <a href="~/Content/TemplateReport/HENKATEN ENVIRO.xlsx" target="_blank">Download Template</a>
            </div>
        </div>

        <div class="form-group row hkenv">
            <div class="col-lg-2">
                <label>Support File :</label>
            </div>
            <div class="col-lg-4">
                <input style="width:100%" class="form-control" type="file" id="WP02002_FILE_HKENV" name="WP02002_FILE_HKENV" accept="application/pdf">
            </div>
            <div class="col-lg-4" id="uploadedenv">

            </div>
        </div>
    </div>
</div>