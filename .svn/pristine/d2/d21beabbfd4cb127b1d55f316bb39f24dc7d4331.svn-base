SELECT
	TOP 1
	(
		CASE WHEN B.HK_ENV_BUILDING = 'true' OR B.HK_ENV_MACHINE = 'true' OR B.HK_ENV_MATERIAL = 'true' OR B.HK_ENV_PROCESS = 'true' THEN
			'true'
		ELSE
			'false'
		END
	) AS HENKANTEN_ENV,
	(
		CASE WHEN C.HK_SAFETY_MACHINE = 'true' OR C.HK_SAFETY_MODIFICATION = 'true' OR C.HK_SAFETY_PROCESS = 'true' THEN
			'true'
		ELSE
			'false'
		END
	) AS HENKANTEN_SAFETY
FROM 
TB_R_WP_PROJECT_JOB AS A
INNER JOIN TB_R_WP_DETAIL_HENKATEN_ENV AS B ON A.ID = B.WP_PROJECT_JOB_ID
INNER JOIN TB_R_WP_DETAIL_HENKATEN_SAFETY AS C ON A.ID = C.WP_PROJECT_JOB_ID
WHERE A.WP_IMPB_NO = @IMPB