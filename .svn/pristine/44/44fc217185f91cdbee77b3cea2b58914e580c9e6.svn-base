                    sts = false;
                }

                if (AUTHORIZATION_DESC == null || AUTHORIZATION_DESC == "") {
                    toastr.warning('Authorization Desc Cannot Be Empty');
                    sts = false;
                }

                if (MENUS == null || MENUS == "") {
                    toastr.warning('Menus Cannot Be Empty');
                    sts = false;
                }

                if (sts == false) {
                    return;
                }

                 $.ajax({
                    type: "POST",
                    url: 'WP04001/Update_Data',
                    async: false,
                    data: {
