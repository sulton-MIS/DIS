    //tombol Add New
    function addNew() {
        var AUTHORIZATION_NAME = $('#addAuthorizationName').val();
        var AUTHORIZATION_DESC = $('#addAuthorizationDescription').val();
        var getMenu = $('#addMenu').val();
        var MENUS = "";
        var MENU_PARENT = "";
        for (var i = 0; i < getMenu.length; i++) {
            if (i == (getMenu.length - 1)) {
                MENUS = MENUS + getMenu[i];
            } else {
                MENUS = MENUS + getMenu[i] + ",";
            }
        }
        var temp_menu = "";
        var GET_MENU_PARENTS = $('#addMenu option:selected');
        for (var i = 0; i < GET_MENU_PARENTS.length; i++) {
            var get_parent = $(GET_MENU_PARENTS[i]).attr('parent');

            if (temp_menu != get_parent) {
                if (i == (GET_MENU_PARENTS.length - 1)) {
                     MENU_PARENT = MENU_PARENT + get_parent;
                } else {
                    MENU_PARENT = MENU_PARENT + get_parent +",";
                }
            }
            
                temp_menu = get_parent;
        }
        
        var sts = true;

        if (AUTHORIZATION_NAME == null || AUTHORIZATION_NAME == "") {
            toastr.warning('Authorization Name Cannot Be Empty');
            sts = false;
        }

        if (AUTHORIZATION_DESC == null || AUTHORIZATION_DESC == "") {
            toastr.warning('Authorization Desc Cannot Be Empty');
            sts = false;
        }

        if (MENUS == null) {
            toastr.warning('Menu Cannot Be Empty');
            sts = false;
        }

        if (sts == false) {
            return;
        }

        $.ajax({
            type: "POST",
            url: SITE_URL + 'ADD_NEW',
            async: false,
            data: {
                AUTHORIZATION_NAME: AUTHORIZATION_NAME,
                AUTHORIZATION_DESC: AUTHORIZATION_DESC,
                MENUS: MENUS,
                MENU_PARENT: MENU_PARENT
            },
            success: function (res) {
                if (res.sts == "TRUE") {
                    toastr.success("Data Has Been Save Successfuly");
                    searchData();
                    $('#btncloselookup').click();
                } else {
                    toastr.warning(res.message);
                }
            },
            error: function (res) {
                toastr.error(res.Message);
            }
        });
    }

