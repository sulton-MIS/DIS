
@using AI070.Models;
@{
}

<style>
    .icon-danger{

    }

    .icon-danger:hover {
        background-color:aquamarine;
        cursor:pointer;
    }

    .icon-selected {
        background-color: aquamarine;
    }
</style>

<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Add new Working Master</h4>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <label class="required">WORKING NAME</label>
                            <input type="text" maxlength="50" id="addWorkingName" class="form-control" placeholder="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="padding:0;">
                            <label>STATUS</label>
                            <select id="addStatus" class="form-control">
                                <option value="1">Active</option>
                                <option value="0">Not Active</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="padding:0;">
                            <label>ICON</label><br />
                            @{
                                for (var i = 1; i <= 18; i++)
                                {
                                    <img style="height:80px; width:90px" class="icon-danger add-icon" data-type="add" data-icon="@(i)" src="~/Content/Images/Icon/@(i).png" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!--form edit data-->
<div id="modalEditForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Edit Working Master</h4>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <label class="required">WORKING NAME</label>
                            <input type="text" maxlength="50" id="editWorkingName" class="form-control" placeholder="">
                            <input style="display:none" type="text" maxlength="50" id="EditID" class="form-control" placeholder="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="padding:0;">
                            <label>STATUS</label>
                            <select id="editStatus" class="form-control">
                                <option value="1">Active</option>
                                <option value="0">Not Active</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="padding:0;">
                            <label>ICON</label><br />
                            @{
                                for (var i = 1; i <= 18; i++)
                                {
                                    <img style="height:80px; width:90px" class="icon-danger edit-icon" data-type="edit" data-icon="@(i)" src="~/Content/Images/Icon/@(i).png" />

                                }
                            }
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" onclick="edit_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 85px;"><i class="fa fa-check"></i> UPDATE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>
