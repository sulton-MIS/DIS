@{
    var form_type = ViewBag.form_type;
}

<script type="text/javascript">
    tinymce.init(
        {
            selector: 'textarea',
            width: 800,
            height: 300,
            encoding: 'raw'
        });
</script>

@{

    if (form_type == "New")
    {
        <div class="container">
            <div class="row">
                <div class="col align-right">
                    <button type="button" class="btn btn-danger btn-close" id="btn_close" onclick="back()"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-11 col-sm-11 col-md-11" style="margin-top: -13px; margin-left: 10px;">
                    <label class="control-label text-muted"><h2>@ViewData["Title"]</h2></label>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2">Title : </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="addTitle" placeholder="Enter Title">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Description : </label>
                    <div class="col-sm-8">
                        <input class="form-control" id="addDescription" placeholder="Enter Description">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">File Modul : </label>
                    <div class="col-sm-8">
                        <form id="form1" runat="server">
                            <input type='file' id="imgInp" />
                        </form>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Content Training : </label>
                    <div class="col-sm-8">
                        <textarea type="text" id="addContent"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-primary btn-xs" id="btn_insert" onclick="Insert()"><i class="fa fa-check"></i>Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col align-right">
                    <button type="button" class="btn btn-danger btn-close" id="btn_close" onclick="back()"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-11 col-sm-11 col-md-11" style="margin-top: -13px; margin-left: 10px;">
                    <label class="control-label text-muted"><h2>@ViewData["Title"]</h2></label>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2">Title : </label>
                    <div class="col-sm-8">
                        <input value="@ViewBag.Id" style="display:none" type="text" maxlength="50" id="editID" class="form-control" placeholder="">
                        <input value="@ViewBag.Title_form" class="form-control" id="editTitle" placeholder="Enter Title">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Description : </label>
                    <div class="col-sm-8">
                        <input value="@ViewBag.Description" class="form-control" id="editDescription" placeholder="Enter Description">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">File Modul : </label>
                    <div class="col-sm-8">
                        <form id="form1" runat="server">
                            <input type='file' id="editFileModul" />
                        </form>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Content Training : </label>
                    <div class="col-sm-8">
                        <textarea type="text" id="editContent"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-primary btn-xs" id="btn_insert" onclick="Update()"><i class="fa fa-check"></i>Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
}



<style>

    #data-container {
        display: initial;
    }

    @@media only screen and (max-width: 600px) {
        .panel-member {
            600px;
        }
    }

    @@media only screen and (min-width: 600px) {
        .panel-member {
            min-height: 520px;
            padding: 0;
            margin: 0;
        }
    }

    .text-test {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        vertical-align: middle;
    }
</style>

<div id="data-container" style="display:none" class="container-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="panel panel-member">
                    <div class="pull-left button-back">
                        <button class="btn btn-danger btn-sm"><i class="fa fa-arrow-circle-left"></i></button>
                    </div>
                    <div class="panel-body">
                        <h1 class="text-test">
                            IM HERE
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>