        var FLAG = $('#addFlag').val();
        var STATUS = $('#addStatus').val();

        var sts = true;

        if (COMPANY_CODE == null || COMPANY_CODE == "") {
            GenerateMessage("COMPANY CODE", "MWP008");
            sts = false;
        }

        if (COMPANY_NAME == null || COMPANY_NAME == "") {
            GenerateMessage("COMPANY NAME", "MWP008");
            sts = false
        }

        if (COMPANY_INITIAL == null || COMPANY_INITIAL == "") {
            GenerateMessage("COMPANY INITIAL", "MWP008");
            sts = false
        }

        if (CONTACT_PERSON == null || CONTACT_PERSON == "") {
            GenerateMessage("CONTACT PERSON", "MWP008");
            sts = false;
        }

        var getAT = EMAIL.split('@@');
        if (EMAIL == null || EMAIL == "") {
            GenerateMessage("EMAIL", "MWP008");
            sts = false;
        } else if (getAT.length < 2) {
            GenerateMessage("WORKING NAME", "MWP010");
            sts = false;
        }

        if (PHONE == null || PHONE == "") {
            GenerateMessage("PHONE", "MWP008");
            sts = false
        }

        if (sts == false) {
            return;
        } else {
            $('#PopupForm_AddNewConfirm').modal();
        }
    }

