@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP02002Master;
@{
    List<CompanyModel> Company = (List<CompanyModel>)ViewData["Company"];
    List<EmployeeModel> Employee = (List<EmployeeModel>)ViewData["Employee"];

    List<AreaModel> Areas = (List<AreaModel>)ViewData["Area"];
    List<DivisionModel> Division = (List<DivisionModel>)ViewData["Division"];

    List<LocationModel> Location = (List<LocationModel>)ViewData["Location"];
}

<style>
    #tableSearch {
        border-spacing: 10px;
        border-collapse: separate;
    }
</style>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-11" style="margin-top: -13px; margin-left: 10px;">
        <label class="control-label text-muted"><h2>@ViewData["Title"]</h2></label>
    </div>
</div>

<div class="row" id="SearchCriteriaForm">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form role="form" class="form-horizontal" id="searchForm">
                    <div class="row" style="margin-bottom: -25px;margin-top: -10px">
                        <div class="col">
                            <table id="tableSearch">
                                <tr>
                                    <td style="width:10%">Project Name: </td>
                                    <td style="width:20%"><input id="searchProjectName" class="form-control" type="text" /></td>
                                    <td style="width:10%">IMPB No : </td>
                                    <td style="width:20%">
                                        <input id="searchIMPB" class="form-control" />
                                    </td>
                                    <td style="width:8%">Division : </td>
                                    <td style="width:12%">
                                        <select id="searchDivision" class="form-control select2">
                                            <option value=''>-- ALL --</option>
                                            @{
                                                if (Division != null)
                                                {
                                                    if (Division.Count() > 0)
                                                    {
                                                        foreach (DivisionModel item in Division)
                                                        {
                                                            <option value="@item.DIV_ID">@item.DIV</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td style="width:8%">From : </td>
                                    <td style="width:12%"><input id="searchDate" class="form-control datepicker" style="text-align:center" type="text" /></td>
                                    

                                </tr>
                                <tr>
                                    <td>Project Code : </td>
                                    <td>
                                        <input id="searchCode" class="form-control" />
                                    </td>
                                    <td>Location : </td>
                                    <td>
                                        <select id="searchLocation" class="form-control select2">
                                            <option value=''>-- ALL --</option>
                                            @{
                                                if (Location != null)
                                                {
                                                    if (Location.Count() > 0)
                                                    {
                                                        foreach (LocationModel item in Location)
                                                        {
                                                            <option value="@item.ID_TB_M_LOCATION">@item.LOC_NAME</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>

                                    <td>Company : </td>
                                    <td>
                                        <select id="searchCompany" class="form-control select2">
                                            <option value=''>-- ALL --</option>
                                            @{
                                                if (Company != null)
                                                {
                                                    if (Company.Count() > 0)
                                                    {
                                                        foreach (CompanyModel item in Company)
                                                        {
                                                            <option value="@item.ID_TB_M_COMPANY">@item.COMPANY_NAME</option>
                                                        }
                                                    }
                                                }
                                            }
                                            <option>Other</option>
                                        </select>
                                    </td>

                                    <td>To : </td>
                                    <td><input id="searchDateTo" class="form-control datepicker" style="text-align:center" type="text" /></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div style="margin-bottom: 10px"></div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-8 text-right">
                            <img id="_reloading" src="Content/Bootstrap/img/loading.gif" alt="Please Wait" style="width: 30px; height: 30px; margin-right: 4px; opacity: 0;" />
                            <button type="button" class="btn btn-primary btn-xs" id="btn_search" style="width: 80px;"><i class="fa fa-search"></i> Search</button>
                            <button type="button" onclick="clear_search()" class="btn btn-grey btn-xs" id="btn_clear" style="width: 80px;" onclick="clear_search"><i class="fa fa-eraser"></i> Clear</button>
                        </div>
                    </div>

                    <div class="row" style="display:none;">
                        <div class="hr hr-10" style="margin-bottom: 10px"></div>
                        <div class="col-xs-12 col-sm-12 col-md-7">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-5 text-right">
                            <img id="_reloading" src="Content/Bootstrap/img/loading.gif" alt="Please Wait" style="width: 30px; height: 30px; margin-right: 4px; opacity: 0;" />
                            <button type="button" class="btn btn-primary btn-xs" id="btn_new" style="width: 80px;" onclick=""><i class="fa fa-plus"></i> New</button>
                            <button type="button" class="btn btn-primary btn-xs" id="btn_edit" style="width: 80px;" onclick=""><i class="fa fa-pencil-square-o"></i> Edit</button>
                            <button type="button" class="btn btn-danger btn-xs" id="btn_Delete" style="width: 80px;" onclick=""><i class="fa fa-trash-o"></i> Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>