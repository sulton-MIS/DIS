@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP02002Master;
@{
    List<WorkingHoursModel> WorkingHours = (List<WorkingHoursModel>)ViewData["WorkingHours"];
}
    <div class="row">
        <div class="col-lg-6">
            <label class="section-title">
                <u>D. Shift Job</u>
            </label>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-primary btn-xs pull-right jobbtn" id="WP02002_BTN_ADD_SHOW_WORKINGHOURS" style="width: 80px;"><i class="fa fa-plus"></i> Add</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row space-bottom">
            <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
                <div style="border: 1px solid #ccc; overflow:scroll; position: relative;">
                    <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                    <div id="tScrollHead" style="width: 100%; border-right:1px solid #fff">
                        <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                            <thead>
                                <tr>
                                    <th style="width: 50%;">Available Shift</th>
                                    <th style="width: 50%;">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!--data grid-->
                    <div id="tScrollBody" style="height: 255px;">
                        <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                            <tbody id="WP02002_TBL_ADD_WORKINGHOURS" style="display: none;">
                                <tr>
                                    <td style="width: 50%; padding:0!important">
                                        <select style="width:100%" id="WP02002_DDL_ADD_WORKINGHOURS" class="bg-danger">
                                            @{
                                                if (WorkingHours != null)
                                                {
                                                    if (WorkingHours.Count() > 0)
                                                    {
                                                        foreach (WorkingHoursModel item in WorkingHours)
                                                        {
                                                            <option value="@item.WorkingHours" name="@item.WorkingHours,@item.WorkingHoursText">@item.WorkingHoursText</option>
                                                        }
                                                    }
                                                }
                                            }
                                       
                                        </select>
                                    </td>
                                    <td style="width: 50%">
                                        <button type="button" id="WP02002_BTN_ADD_WORKINGHOURS" onclick="addDataWorkingHours()" class="btn btn-primary btn-xs" style="width: 60px; margin-left:5px;">
                                            <i class="fa fa-save">
                                            </i>
                                        </button>
                                        <button type="button" id="WP02002_BTN_ADD_WORKINGHOURS_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                            <tbody id="WP02002_TBL_EDIT_WORKINGHOURS" style="display: none;">
                                <tr>
                                    <td style="width: 50%; padding:0!important">
                                        <select style="width:100%" id="WP02002_DDL_EDIT_WORKINGHOURS" class="bg-danger">
                                            @{
                                                if (WorkingHours != null)
                                                {
                                                    if (WorkingHours.Count() > 0)
                                                    {
                                                        foreach (WorkingHoursModel item in WorkingHours)
                                                        {
                                                            <option value="@item.WorkingHours" name="@item.WorkingHours,@item.WorkingHoursText">@item.WorkingHoursText</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td style="width: 50%">
                                        <button type="button" id="WP02002_BTN_EDIT_WORKINGHOURS" class="btn btn-primary btn-xs" style="width: 60px; margin-left:5px;">
                                            <i class="fa fa-save">
                                            </i>
                                        </button>
                                        <button type="button" id="WP02002_BTN_EDIT_WORKINGHOURS_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                            <tbody id="WP02002_TBL_LIST_WORKINGHOURS" class="listdatagrid">
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>