SELECT TOP 1 C.ID_MENU, ID_MENU_PARENT FROM TB_M_USER_MAPPING AS A
INNER JOIN TB_M_ROLE AS B ON A.ROLE = B.ID_TB_M_ROLE
INNER JOIN TB_M_AUTHORIZATION_FUNCTION AS C ON B.ID_TB_M_AUTHORIZATION_FUNCTION = C.ID_TB_M_AUTHORIZATION_FUNCTION
WHERE A.USERNAME = (CASE WHEN ISNUMERIC(@USERNAME) = 1 THEN ''+@USERNAME+'' ELSE @USERNAME END )

