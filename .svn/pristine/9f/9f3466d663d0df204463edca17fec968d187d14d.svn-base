@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.WP02002Master;
@{
    List<EmployeeModel> Employee = (List<EmployeeModel>)ViewData["Employee"];
}
    <div class="row">
        <div class="col-lg-6">
            <label class="section-title">
                <u>Item Check</u>
            </label>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-primary btn-xs pull-right jobbtn" id="WP02005_BTN_ADD_SHOW_ITEMCHECK" style="width: 80px;"><i class="fa fa-plus"></i> Add</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row space-bottom">
            <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
                <div style="border: 1px solid #ccc; overflow:scroll; position: relative;">
                    <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                    <div id="tScrollHead" style="width: 100%; border-right:1px solid #fff">
                        <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                            <thead>
                                <tr>
                                    <th style="width: 30%;">Item Name</th>
                                    <th style="width: 20%;">Description</th>
                                    <th style="width: 15%;">PIC</th>
                                    <th style="width: 15%;">Status</th>
                                    <th style="width: 20%;">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!--data grid-->
                    <div id="tScrollBody" style="height: 255px;">
                        <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                            <tbody id="WP02005_TBL_ADD_ITEMCHECK" style="display: none;">
                                <tr>
                                    <td style="width: 30%; padding:0!important">
                                        <input type="text" class="form-control space-input" id="WP02005_TXT_ADD_ITEMNAME" maxlength="50">
                                    </td>
                                    <td style="width: 20%; padding:0!important">
                                        <input type="text" class="form-control space-input" id="WP02005_TXT_ADD_ITEMDESCRIPTION">
                                    </td>
                                    <td style="width: 15%; padding:0!important">
                                        <select class="form-control space-input select2 input-job" id="WP02005_DDL_ADD_PIC">
                                            <option value="">- select -</option>
                                            @{
                                                if (Employee != null)
                                                {
                                                    if (Employee.Count() > 0)
                                                    {
                                                        foreach (EmployeeModel item in Employee)
                                                        {
                                                            <option style="display:none" value="@item.ID_TB_M_EMPLOYEE" code="@item.ID_TB_M_COMPANY" noanzen="@item.ANZEN_SERTIFICATE_NO" phone="@item.PHONE">@item.NAME</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td style="width: 15%; padding:0!important">
                                        <select id="WP02005_DDL_ADD_STATUS_ITEM" class="form-control">
                                            <option value="Available">Available</option>
                                            <option value="None">None</option>
                                        </select>
                                    </td>
                                    <td style="width: 20%">
                                        <button type="button" id="WP02005_BTN_ADD_ITEMCHECK" onclick="confirmAddITEMCHECK()" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                            <i class="fa fa-save">
                                            </i>
                                        </button>
                                        <button type="button" id="WP02005_BTN_ADD_ITEMCHECK_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                            <tbody id="WP02005_TBL_EDIT_ITEMCHECK" style="display: none;">
                                <tr>
                                    <td style="width: 30%; padding:0!important">
                                        <input type="text" class="form-control space-input" id="WP02005_TXT_EDIT_ITEMNAME" maxlength="50">
                                    </td>
                                    <td style="width: 20%; padding:0!important">
                                        <input type="text" class="form-control space-input" id="WP02005_TXT_EDIT_ITEMDESCRIPTION">
                                    </td>
                                    <td style="width: 15%; padding:0!important">
                                        <select class="form-control space-input select2 input-job" id="WP02005_DDL_EDIT_PIC">
                                            <option value="">- select -</option>
                                            @{
                                                if (Employee != null)
                                                {
                                                    if (Employee.Count() > 0)
                                                    {
                                                        foreach (EmployeeModel item in Employee)
                                                        {
                                                            <option style="display:none" value="@item.ID_TB_M_EMPLOYEE" code="@item.ID_TB_M_COMPANY" noanzen="@item.ANZEN_SERTIFICATE_NO" phone="@item.PHONE">@item.NAME</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td style="width: 15%; padding:0!important">
                                        <select id="WP02005_DDL_EDIT_STATUS_ITEM" class="form-control">
                                            <option value="Available">Available</option>
                                            <option value="None">None</option>
                                        </select>
                                    </td>
                                    <td style="width: 20%">
                                        <button type="button" id="WP02005_BTN_EDIT_ITEMCHECK" class="btn btn-primary btn-xs" style="width: 60px; margin-left:10px;">
                                            <i class="fa fa-save">
                                            </i>
                                        </button>
                                        <button type="button" id="WP02005_BTN_EDIT_ITEMCHECK_CLOSE" class="btn btn-danger btn-xs" style="width: 60px"><i class="fa fa-sign-out"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                            <tbody id="WP02005_TBL_LIST_ITEMCHECK">
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>