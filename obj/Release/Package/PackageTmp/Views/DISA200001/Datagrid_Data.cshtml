@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA200001Master;
@{
    List<DISA200001Master> DataWP = (List<DISA200001Master>)ViewData["DataDISA200001"];
    List<DISA200001> Status_Cmb = (List<DISA200001>)ViewData["Status_Cmb"];
    List<DISA200001> Time_Cmb = (List<DISA200001>)ViewData["Time_Cmb"];
    List<DISA200001> ExecTime_Cmb = (List<DISA200001>)ViewData["Time_Cmb"];
    List<DISA200001> Model_type = (List<DISA200001>)ViewData["Model_type"];

    //var seletc_data_unit_time = "";
    //var seletc_data_exec_time = "";
    //var seletc_data_status = "";
    //var error = 0;
}

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>


<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            @*<th style="width: 30px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>*@
                            <th style="width: 40px;" rowspan="2">NO</th>
                            <th style="width: 200px;" rowspan="2">NO. ASSET</th>
                            <th style="width: 300px;" rowspan="2">NAMA ASSET</th>
                            <th style="width: 200px;" rowspan="2">GAMBAR</th>
                            <th style="width: 200px;" rowspan="2">MEREK</th>
                            <th style="width: 200px;" rowspan="2">TIPE</th>
                            <th style="width: 200px;" rowspan="2">SUPPLIER</th>
                            <th style="width: 200px;" rowspan="2">TAHUN</th>
                            <th style="width: 200px;" rowspan="2">QTY</th>
                            <th style="width: 200px;" rowspan="2">HARGA SATUAN</th>
                            <th style="width: 200px;" rowspan="2">TOTAL</th>
                            <th style="width: 200px;" rowspan="2">JENIS ASSET</th>
                            <th style="width: 200px;" rowspan="2">KATEGORI ASSET</th>
                            <th style="width: 200px;" rowspan="2">PIC BELI</th>
                            <th style="width: 200px;" rowspan="2">DEPART. USER</th>
                            <th style="width: 200px;" rowspan="2">NAMA USER</th>
                            <th style="width: 200px;" rowspan="2">KODE LOKASI</th>
                            <th style="width: 200px;" rowspan="2">NAMA LOKASI</th>
                            <th style="width: 200px;" rowspan="2">HALTE</th>
                            <th style="width: 200px;" rowspan="2">JENIS DOC.</th>
                            <th style="width: 200px;" rowspan="2">NO. BC</th>
                            <th style="width: 200px;" rowspan="2">TGL. BC</th>
                            <th style="width: 200px;" rowspan="2">TGL. REGISTER</th>
                            <th style="width: 200px;" rowspan="2">STATUS ASSET</th>
                            <th style="width: 200px;" rowspan="2">LABEL STATUS</th>
                            <th style="width: 200px;" rowspan="2">STATUS DISPOSE</th>
                            <th style="width: 200px;" rowspan="2">TGL. DISPOSE</th>
                            <th style="width: 100px;" rowspan="2">TGL. PERUBAHAN</th>
                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="10" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 200px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA200001Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            @*<td style="width: 30px; text-align: center;" class="grid-checkbox-col">
                                                <input class="grid-checkbox" value="@item.ID,@item.NO_ASSET,@item.NAMA_ASSET,@item.NAMA_FOTO, @item.MEREK, @item.TIPE, @item.SUPPLIER, @item.TAHUN, @item.QTY, @item.HARGA_SATUAN, @item.TOTAL, @item.JENIS_ASSET, @item.KATEGORI_ASSET, @item.PIC_BELI, @item.DEPT_USER, @item.NAMA_USER, @item.KD_LOKASI, @item.NAMA_LOKASI, @item.HALTE, @item.JENIS_DOC, @item.NO_BC, @item.TGL_BC, @item.TGL_REGIST, @item.STATUS, @item.FLG_LABEL_ASSET"
                                                       type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                            </td>*@
                                            <td style="width: 40px; text-align:center;">
                                                @item.ROW_NUM
                                            </td>
                                            <td style="width: 200px"> @item.NO_ASSET</td>
                                            <td style="width: 300px"> @item.NAMA_ASSET</td>
                                            <td style="width: 200px; text-align:center;"> <img src="~/Content/Upload/Foto/ManajementAsset/@item.NAMA_FOTO" style="width:100px; height:75px; text-align: center" /> </td>
                                            <td style="width: 200px"> @item.MEREK</td>
                                            <td style="width: 200px"> @item.TIPE</td>
                                            <td style="width: 200px"> @item.SUPPLIER</td>
                                            <td style="width: 200px"> @item.TAHUN</td>
                                            <td style="width: 200px"> @item.QTY</td>
                                            <td style="width: 200px"> @item.HARGA_SATUAN</td>
                                            <td style="width: 200px"> @item.TOTAL</td>
                                            <td style="width: 200px"> @item.JENIS_ASSET</td>
                                            <td style="width: 200px"> @item.KATEGORI_ASSET</td>
                                            <td style="width: 200px"> @item.PIC_BELI</td>
                                            <td style="width: 200px"> @item.DEPT_USER</td>
                                            <td style="width: 200px"> @item.NAMA_USER</td>
                                            <td style="width: 200px"> @item.KD_LOKASI</td>
                                            <td style="width: 200px"> @item.NAMA_LOKASI</td>
                                            <td style="width: 200px"> @item.HALTE</td>
                                            <td style="width: 200px"> @item.JENIS_DOC</td>
                                            <td style="width: 200px"> @item.NO_BC</td>
                                            <td style="width: 200px"> @item.TGL_BC</td>
                                            <td style="width: 200px"> @item.TGL_REGIST</td>
                                            <td style="width: 200px"> @item.STATUS</td>
                                            @{
                                                if (item.FLG_LABEL_ASSET == "1") { 
                                                    <td style="width: 200px"> Sudah label </td>
                                                }
                                                else { 
                                                    <td style="width: 200px"> Belum label </td>
                                                }
                                            }
                                            <td style="width: 200px"> @item.FLG_DISPOSE_ASSET</td>
                                            <td style="width: 200px"> @item.TGL_DISPOSE_ASSET</td>
                                            <td style="width: 100px"> @item.TGL_HISTORY</td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
