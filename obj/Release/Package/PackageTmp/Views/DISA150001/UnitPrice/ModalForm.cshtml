
@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;

@{
    List<DISA150001_UnitPrice_Master> ListProses = (List<DISA150001_UnitPrice_Master>)ViewData["name_item"];

}

<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">FORM ADD UNIT PRICE </h4>
            </div>

            <div class="modal-body">
                @*<div class="FlexLine">
                        <span class="FlexText">WORKER FORM</span>
                    </div>*@
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">NAMA ITEM</label>
                        <select class="form-control select2" id="addNameItem" required>
                            <option value="" selected="selected" style="font-style: italic; color: gray"> --- Pilih Item --- </option>
                            @{
                                if (ListProses != null)
                                {
                                    if (ListProses.Count() > 0)
                                    {
                                        foreach (DISA150001_UnitPrice_Master item in ListProses)
                                        {
                                            <option value="@item.NAME_ITEM">@item.NAME_ITEM</option>
                                        }
                                    }
                                }
                            }
                        </select>
                    </div>
                        <div class="col-md-6">
                            <label class="required">ITEM CODE</label>
                            <input id="addItemCode" required type="text" class="form-control" disabled="" />
                        </div>

                    </div>
                    <div class="row">                        
                        <div class="col-md-6">
                            <label>UNIT PRICE</label>
                            <input id="addUnitPrice" required type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
                <button onclick="add_check()" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!--form edit data-->
<div id="modalEditForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">FORM EDIT UNIT PRICE </h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">NAMA ITEM</label>
                        <input id="editNameItem" required type="text" class="form-control" disabled="" />
                    </div>
                    <div class="col-md-6">
                        <label class="required">ITEM CODE</label>
                        <input id="editItemCode" required type="text" class="form-control" disabled="" />
                    </div>
                    <input id="EditID" required type="hidden" class="form-control" disabled="" />
                </div>
                <div class="row">                    
                    <div class="col-md-6">
                        <label>UNIT PRICE</label>
                        <input id="editUnitPrice" required type="text" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="edit_check()" class="btn btn-primary btn-sm" style="width: 85px;"><i class="fa fa-check"></i> UPDATE</button>
                <button type="button" id="editBtnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>
