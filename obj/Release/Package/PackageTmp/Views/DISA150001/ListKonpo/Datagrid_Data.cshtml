@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001_ListKonpo_Master> DataWP = (List<DISA150001_ListKonpo_Master>)ViewData["DataDISA150001"];

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}

<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>


<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 100px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>
                            <th style="width: 40px;" rowspan="2">No</th>
                            <th style="width: 300px;" rowspan="2">Item Code</th>
                            <th style="width: 150px;" rowspan="2">Jenis Packing</th>
                            <th style="width: 200px;" rowspan="2">Qty Pcs</th>
                            <th style="width: 200px;" rowspan="2">Factory Size</th>
                            <th style="width: 200px;" rowspan="2">Indirect</th>
                            <th style="width: 150px;" rowspan="2">Berat</th>
                            <th style="width: 200px;" rowspan="2">Panjang</th>
                            <th style="width: 200px;" rowspan="2">Lebar</th>
                            <th style="width: 200px;" rowspan="2">Tinggi</th>
                            <th style="width: 200px;" rowspan="2">Harga</th>
                        </tr>
                        <!--<tr>-->
                        @*Colspan Dari "Created"*@
                        <!--<th style="width: 150px; ">By</th>
                        <th style="width: 150px; border: initial; ">Date</th>-->
                        @*Colspan Dari "Created"*@
                        <!--<th style="width: 150px; ">By</th>
                            <th style="width: 150px; border: initial; ">Date</th>
                        </tr>-->
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="12" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 200px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001_ListKonpo_Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 100px; text-align: center;" class="grid-checkbox-col">
                                                <input class="grid-checkbox" value="@item.ID,@item.item_code,@item.jenis_packing,@item.qty_pcs,@item.factory_size,@item.indirect,@item.berat,@item.panjang,@item.lebar,@item.tinggi,@item.harga" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                            </td>
                                            <td style="width: 40px">
                                                @item.ROW_NUM
                                            </td>
                                            <td style="width: 300px"> @item.item_code</td>
                                            <td style="width: 150px"> @item.jenis_packing </td>
                                            <td style="width: 200px"> @item.qty_pcs </td>
                                            <td style="width: 200px"> @item.factory_size mm </td>
                                            <td style="width: 200px"> @item.indirect </td>
                                            <td style="width: 150px"> @item.berat kg</td>
                                            <td style="width: 200px"> @item.panjang mm </td>
                                            <td style="width: 200px"> @item.lebar mm </td>
                                            <td style="width: 200px"> @item.tinggi mm </td>
                                            <td style="width: 200px">RP. @item.harga </td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("ListKonpo/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>