@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA150001Master;
@{
    List<DISA150001_TypeCust_Master> DataWP = (List<DISA150001_TypeCust_Master>)ViewData["DataDISA150001"];
    //List<DISA150001_TypeCust> Status_Cmb = (List<DISA150001_TypeCust>)ViewData["Status_Cmb"];
    //List<DISA150001_TypeCust> Time_Cmb = (List<DISA150001_TypeCust>)ViewData["Time_Cmb"];
    //List<DISA150001_TypeCust> ExecTime_Cmb = (List<DISA150001_TypeCust>)ViewData["Time_Cmb"];
    //List<DISA150001_TypeCust> Model_type = (List<DISA150001_TypeCust>)ViewData["Model_type"];

    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}

<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }
    /* #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }*/

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row">
    <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden;" id="GridTable">
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 30px; text-align: center;" class="grid-checkbox-col">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" />
                            </th>                          
                            <th style="width: 30px;">No</th>
                            <th style="width: 150px;">DMC TYPE</th>
                            <th style="width: 250px;">CUSTOMER</th>
                            <th style="width: 100px;">TOUCH PANEL DIMENSION</th>
                            <th style="width: 50px;">WIS VERSION</th>
                            <th style="width: 50px;">LOT SIZE</th>
                            <th style="width: 50px;">IN DIRECT</th>
                            <th style="width: 50px;">SGA</th>
                        </tr>                                             
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="9" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 500px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="min-width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA150001_TypeCust_Master item in DataWP)
                                    {
                                        string Customer = item.Customer;
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 30px; text-align: center;" class="grid-checkbox-col">
                                                <input class="grid-checkbox" value="@item.ID,@item.Dmc_Type,@Customer.Replace(",", ""),@item.Touch_Panel_Size,@item.Wis_Version,@item.Lot_Size,@item.In_Direct,@item.Sga" type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                            </td>
                                            <td style="width: 30px">
                                                @item.ROW_NUM
                                            </td>
                                            <td style="width: 150px">@item.Dmc_Type</td>
                                            <td style="width: 250px">@item.Customer</td>
                                            <td style="width: 100px">@item.Touch_Panel_Size</td>
                                            <td style="width: 50px">@item.Wis_Version</td>
                                            <td style="width: 50px">@item.Lot_Size</td>
                                            <td style="width: 50px">@item.In_Direct</td>
                                            <td style="width: 50px">@item.Sga</td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("TypeCust/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>