                        <select class="form-control" id="editFactory" name="dropdown">
                            <option id="editFactory" value="assembly" selected="selected"> assembly </option>
                            <option id="editFactory" value="etching" selected="selected"> etching </option>
                            <option id="editFactory" value="kompo" selected="selected"> kompo </option>
                            <option id="editFactory" value="non printing" selected="selected"> non printing </option>
                            <option id="editFactory" value="press" selected="selected"> press </option>
