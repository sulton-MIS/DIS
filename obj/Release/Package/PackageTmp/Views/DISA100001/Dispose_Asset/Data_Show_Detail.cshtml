
@using AI070.Models;
@using AI070.Models.Shared;
@using Toyota.Common.Credential
@using AI070.Models.DISA100001Master;
@{
    List<LokasiModel> Lokasi = (List<LokasiModel>)ViewData["nama_lokasi"];
    List<ListAssetModel> ListAsset = (List<ListAssetModel>)ViewData["no_asset"];
    List<DISA10001_DISPOSE_ASSET> DetailDispose_Asset = (List<DISA10001_DISPOSE_ASSET>)ViewData["DataDispose_Asset_Detail"];


}
<script>

</script>

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        background: #0e54fb;
        color: white;
    }

    #tblScroll tr.selected {
        background: #0e54fb;
        color: white;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0px 5px 0px 5px !important;
    }

    #div_keterangan_umum {
        margin-left: 20px;
        font-size: 14px;
        font-family: Calibri;
    }
</style>

<div class="row" style="margin-top: -13px; margin-left: 10px; margin-right: 10px">
    <div class="col-xs-12 col-sm-12 col-md-11">
        <h2><b>[@ViewData["Title"]]</b></h2>
        @*<h4>@ViewData["NO_ASSET"]  ,  @ViewData["NAMA_ASSET"]</h4>*@
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default" style="border: none;">
                <div class="panel-body" style="border: none;">
                    <div class="row" style="margin-bottom: -25px;margin-top: -10px; border:none;">
                        <div class="col-md-12" id="div_keterangan_umum">
                            <table>
                                <tr>
                                    <td>NO. DISPOSE</td>
                                    <td>:</td>
                                    <td>@ViewData["NO_DISPOSE"]</td>
                                </tr>
                                <tr>
                                    <td>STATUS APPROVAL</td>
                                    <td>:</td>
                                    <td>@ViewData["STATUS_APPROVAL"]</td>
                                </tr>
                                <tr>
                                    <td>TANGGAL</td>
                                    <td>:</td>
                                    <td>@ViewData["CREATED_DATE"]</td>
                                </tr>
                                
                            </table>
                        </div>

                        <div class="col-md-12">
                            <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden; margin-top:10px; background-color: white !important" id="Data_Detail_Dispose">

                                <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
                                    <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                                    <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                                        <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; border:none">
                                            <thead>
                                                <tr style="background: yellow !important">
                                                    <th style="width: 50px;">No.</th>
                                                    <th style="width: 200px;">NO. ASSET</th>
                                                    <th style="width: 350px;">NAMA ASSET</th>
                                                    <th style="width: 350px;">NAMA ASSET INVOICE</th>
                                                    <th style="width: 200px;">DEPARTMENT USER</th>
                                                    <th style="width: 200px;">NAMA USER</th>
                                                    <th style="width: 500px;">KETERANGAN</th>
                                                </tr>
                                            </thead>
                                            @{
                                                if (DetailDispose_Asset == null || DetailDispose_Asset.Count == 0)
                                                {
                                                    <tr id="NoDataFound">
                                                        <td colspan="10" class="text-center">No data found</td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>

                                    <!--data grid-->
                                    <div id="tScrollBody" style="height: 250px;">
                                        <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; border: none">
                                            <tbody id="tableBody show_detail">
                                                <!----><!----><!---->
                                                @{
                                                    if (DetailDispose_Asset != null)
                                                    {
                                                        if (DetailDispose_Asset.Count > 0)
                                                        {
                                                            var number = 1;
                                                            foreach (DISA10001_DISPOSE_ASSET item in DetailDispose_Asset)
                                                            {
                                                                <tr id="row-@number" class="row-@item.ID">
                                                                    <td class="align-center align-middle" style="width: 50px"> @number </td>
                                                                    <td class="align-left align-middle" style="width: 200px"> @item.NO_ASSET </td>
                                                                    <td class="align-left align-middle" style="width: 350px"> @item.NAMA_ASSET </td>
                                                                    <td class="align-left align-middle" style="width: 350px"> @item.NAMA_ASSET_INVOICE </td>
                                                                    <td class="align-left align-middle" style="width: 200px"> @item.DEPT_USER </td>
                                                                    <td class="align-left align-middle" style="width: 200px"> @item.NAMA_USER </td>
                                                                    <td class="align-left align-middle" style="width: 500px"> @item.KETERANGAN</td>
                                                                </tr>
                                                                number++;
                                                            }
                                                        }
                                                    }
                                                }
                                                <!----><!----><!---->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div> 


                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col align-right align-bottom">
        <button type="button" class="btn btn-danger btn-sm btn-close" id="btn_close" onclick="back()"><i class="fa fa-close"></i></button>
    </div>
</div>
