    }

    #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }

    /*---- TABEL UNTUK QTY & AMOUNT ----*/
    .tbDataCount td {
        border: 1px solid #ddd;
        text-align: right;
    }

    .tbDataCount_thead {
        border: 1px solid #ddd;
