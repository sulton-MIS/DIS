                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> FA </td>
                                <td>@ViewData["Qty_FA"]</td>
                                <td>@ViewData["Amount_FA"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> SA </td>
                                <td>@ViewData["Qty_SA"]</td>
                                <td>@ViewData["Amount_SA"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> Total </td>
                                <td>@ViewData["Qty_Total"]</td>
                                <td>@ViewData["Amount_Total"]</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-4">
                        @* Table OK *@
                        <table class="tbDataCount table-bordered table-condensed table-fixed" style="border:1px solid; width: 75%; height: 120px">
                            <tr class="tbDataCount_thead" style="background-color: mediumseagreen !important">
                                <th style="width: 350px;" colspan="3">Good Condition (OK)</th>
                            </tr>
                            <tr class="tbDataCount_thead" style="background-color: mediumseagreen !important">
                                <th style="width: 50px"> Jenis </th>
                                <th style="width: 100px;"> Qty </th>
                                <th style="width: 200px;"> Amount </th>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> FA </td>
                                <td>@ViewData["Qty_FA_OK"]</td>
                                <td>@ViewData["Amount_FA_OK"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> SA </td>
                                <td>@ViewData["Qty_SA_OK"]</td>
                                <td>@ViewData["Amount_SA_OK"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> Total </td>
                                <td>@ViewData["Qty_Total_OK"]</td>
                                <td>@ViewData["Amount_Total_OK"]</td>
                            </tr>
                        </table>

                    </div>

                    <div class="col-md-4">
                        @* Table NG *@
                        <table class="tbDataCount table-bordered table-condensed table-fixed" style="border:1px solid; width: 75%; height: 120px">
                            <tr class="tbDataCount_thead" style="background-color: crimson !important">
                                <th style="width: 350px;" colspan="3">Not Good Condition (NG)</th>
                            </tr>
                            <tr class="tbDataCount_thead" style="background-color: crimson !important">
                                <th style="width: 50px"> Jenis </th>
                                <th style="width: 100px;"> Qty </th>
                                <th style="width: 200px;"> Amount </th>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> FA </td>
                                <td>@ViewData["Qty_FA_NG"]</td>
                                <td>@ViewData["Amount_FA_NG"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> SA </td>
                                <td>@ViewData["Qty_SA_NG"]</td>
                                <td>@ViewData["Amount_SA_NG"]</td>
                            </tr>
                            <tr style="">
                                <td style="font-weight: bold"> Total </td>
                                <td>@ViewData["Qty_Total_NG"]</td>
                                <td>@ViewData["Amount_Total_NG"]</td>
                            </tr>
                        </table>

                    </div>


                </div>
            </div>
            
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">

                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; margin-top: 20px">
                    <thead>
                        <tr>
                            <th id="col-checkbox" style="width: 30px; text-align: center;" class="grid-checkbox-col" rowspan="2">
                                @*<input type="checkbox" value="All" style="height: 12px;" id="checkall" />*@
                            </th>
                            <th style="width: 75px;" rowspan="2">HISTORY</th>
                            <th style="width: 125px;" rowspan="2">GAMBAR</th>
                            <th style="width: 40px;" rowspan="2">NO</th>
                            <th style="width: 200px;" rowspan="2">NO. ASSET</th>
                            <th style="width: 200px;" rowspan="2">NO. REGISTER ASSET</th>
                            <th style="width: 200px;" rowspan="2">ITEM CODE</th>
                            <th style="width: 300px;" rowspan="2">NAMA ASSET</th>
                            <th style="width: 300px;" rowspan="2">NAMA ASSET INVOICE</th>
                            <th style="width: 300px;" rowspan="2">SPESIFIKASI</th>
                            <th style="width: 200px;" rowspan="2">MEREK</th>
                            <th style="width: 200px;" rowspan="2">TIPE</th>
                            <th style="width: 200px;" rowspan="2">SUPPLIER</th>
                            <th style="width: 100px;" rowspan="2">TGL. REGISTER</th>
                            <th style="width: 600px;" colspan="3">DOKUMEN BC</th>
                            <th style="width: 100px;" rowspan="2">JENIS ASSET</th>
                            <th style="width: 100px;" rowspan="2">KATEGORI ASSET</th>
                            <th style="width: 300px;" colspan="2">USER</th>
                            <th style="width: 450px;" colspan="3">LOKASI</th>
                            <th style="width: 200px;" rowspan="2">HARGA</th>
                            <th style="width: 200px;" rowspan="2">COST UPGRADE</th>
                            <th style="width: 150px;" rowspan="2">DEPRESIASI</th>
                            <th style="width: 150px;" rowspan="2">TOTAL DEPRESIASI</th>
                            <th style="width: 150px;" rowspan="2">VALUE OF ASSET</th>
                            <th style="width: 150px;" rowspan="2">UMUR EKONOMIS</th>
                            <th style="width: 150px;" rowspan="2">UMUR AKTUAL</th>
                            <th style="width: 300px;" colspan="2">WAKTU PEROLEHAN</th>
                            <th style="width: 150px;" rowspan="2">STATUS KONDISI ASSET</th>
                            <th style="width: 180px;" rowspan="2">STATUS PENGGUNAAN ASSET</th>
                            <th style="width: 200px;" rowspan="2">STATUS LABEL ASSET</th>
                            <th style="width: 300px;" rowspan="2">KETERANGAN</th>
                            <th style="width: 200px;" rowspan="2">STATUS AUDIT ASSET</th>
                            <th style="width: 200px;" rowspan="2">STATUS DISPOSE ASSET</th>
                            <th style="width: 100px;" rowspan="2">TGL. DISPOSE</th>
                            <th style="width: 200px;" rowspan="2">NO. REQUEST ASSET</th>
                            <th style="width: 200px;" rowspan="2">ID PR</th>
                            <th style="width: 300px;" colspan="2">REQUESTER</th>
                            <th style="width: 200px;" rowspan="2">STATUS PENGADAAN ASSET</th>
                        </tr>
                        <tr>
                            <th style="width: 200px;">JENIS DOKUMEN</th>
                            <th style="width: 200px;">NO. AJU</th>
                            <th style="width: 200px;">TGL. DOKUMEN</th>
                            <th style="width: 150px;">DEPT. USER</th>
                            <th style="width: 150px;">NAMA USER</th>
                            <th style="width: 150px;">KODE LOKASI</th>
                            <th style="width: 150px;">NAMA LOKASI</th>
                            <th style="width: 150px;">HALTE</th>
                            <th style="width: 150px;">TAHUN PEROLEHAN</th>
                            <th style="width: 150px;">BULAN PEROLEHAN</th>
                            <th style="width: 120px;">DEPT. REQUEST</th>
                            <th style="width: 200px;">PIC REQUEST</th>


                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="10" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 500px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; border: none; background-color:white;">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISA100001Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 30px; text-align: center;" class="grid-checkbox-col">
                                                @{
                                                    if (item.FLG_DISPOSE_ASSET != "DISPOSE")
                                                    {
                                                            <input class="grid-checkbox" value="@item.ID,@item.NO_ASSET,@item.NAMA_ASSET,@item.NAMA_ASSET_INVOICE,@item.MEREK,@item.TIPE,@item.SUPPLIER,@item.TAHUN,@item.HARGA_SATUAN,@item.JENIS_ASSET,@item.KATEGORI_ASSET,@item.DEPT_USER,@item.NAMA_USER,@item.KD_LOKASI,@item.HALTE,@item.STATUS_KONDISI,@item.STATUS_PENGADAAN,@item.FLG_LABEL_ASSET,@item.ID_TB_M_REQ_ASSET,@item.ITEM_CODE,@item.STATUS_PENGGUNAAN,@item.UMUR,@item.KETERANGAN,@item.SPESIFIKASI,@item.COST_UPGRADE"
                                                                   type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: inline-block;" />
                                                    }
                                                    else
                                                    {
                                                        <input class="grid-checkbox" type="checkbox" disabled>  
                                                    }
                                                }
                                            </td>
                                                
                                            <td>
                                                <label style="display:none">@item.ID_TB_M_REQ_ASSET</label>
                                                <input type="hidden" id="rowData-@item.ID_TB_M_REQ_ASSET" value="@Json.Encode(item)" />
                                            </td>

                                            <td class="align-center align-middle" style="width: 75px">
                                                <button id="@item.ID" onclick="historyData(this)" type="button" class="cstm_btn">Show</button>
                                                @*<button type="button" id="@item.ID" class="btn btn-success btn-xs" onclick="historyData(this)" style="display: inline-block;">Show</button>*@
                                            </td>
                                            <td class="align-center align-middle" style="width: 125px">
                                                <label data-title="@item.ID_TB_M_REQ_ASSET" onclick="changeImage(this)" id="btn_change" style="text-decoration:underline; cursor:pointer">Lihat Gambar</label>
                                            </td>
                                            <td style="width: 40px; text-align:center;">
                                                @item.ROW_NUM
                                            </td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.NO_ASSET</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.NO_REGISTER</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.ITEM_CODE</td>
                                            <td style="width: 300px"> @item.NAMA_ASSET</td>
                                            <td style="width: 300px"> @item.NAMA_ASSET_INVOICE</td>
                                            <td style="width: 300px"> @item.SPESIFIKASI</td>
                                            <td style="width: 200px"> @item.MEREK</td>
                                            <td style="width: 200px"> @item.TIPE</td>
                                            <td style="width: 200px"> @item.SUPPLIER</td>
                                            <td class="align-center align-middle" style="width: 100px"> @item.TGL_REGISTER</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.JENIS_DOKUMEN</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.NO_AJU</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.TGL_DOKUMEN</td>
                                            @{
                                                if (item.JENIS_ASSET == "FA")
                                                {
                                                    <td class="align-center align-middle" style="width: 100px"> FIXED ASSET </td>
                                                }
                                                else if (item.JENIS_ASSET == "SA")
                                                {
                                                    <td class="align-center align-middle" style="width: 100px"> SMALL ASSET </td>
                                                }

                                            }
                                            <td class="align-center align-middle" style="width: 100px"> @item.KATEGORI_ASSET</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.DEPT_USER</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.NAMA_USER</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.KD_LOKASI</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.NAMA_LOKASI</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.HALTE</td>
                                            <td class="align-center align-middle" style="width: 200px" id="harga_satuan">Rp. @item.HARGA_SATUAN </td>
                                            <td class="align-center align-middle" style="width: 200px" id="cost_upgrade">Rp. @item.COST_UPGRADE </td>
                                            <td class="align-center align-middle" style="width: 150px">Rp. @item.DEPRESIASI</td>
                                            <td class="align-center align-middle" style="width: 150px">Rp. @item.TOTAL_DEPRESIASI</td>
                                            <td class="align-center align-middle" style="width: 150px">Rp. @item.VALUE_OF_ASSET</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.UMUR tahun</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.UMUR_AKTUAL tahun</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.TAHUN</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.BULAN</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.STATUS_KONDISI</td>
                                            <td class="align-center align-middle" style="width: 180px"> @item.STATUS_PENGGUNAAN</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.FLG_LABEL_ASSET</td>
                                            <td style="width: 300px"> @item.KETERANGAN</td>
                                            <td class="align-center align-left" style="width: 200px"> @item.STATUS_AUDIT</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.FLG_DISPOSE_ASSET</td>
                                            <td class="align-center align-middle" style="width:100px;">
                                            @{
                                                if (item.TGL_DISPOSE == null)
                                                {
                                                    <label><i> - </i></label>
                                                }
                                                else {
                                                    <label>@item.TGL_DISPOSE</label>
                                                }
                                            }
                                            </td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.NO_REQUEST_ASSET</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.ID_PR</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.DEPT_REQUEST</td>
                                            <td class="align-center align-middle" style="width: 150px"> @item.PIC_REQUEST</td>
                                            <td class="align-center align-middle" style="width: 200px"> @item.STATUS_PENGADAAN</td>
                                            
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Master_Asset/Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>