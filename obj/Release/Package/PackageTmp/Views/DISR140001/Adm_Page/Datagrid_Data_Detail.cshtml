    var seletc_data_unit_time = "";
    var seletc_data_exec_time = "";
    var seletc_data_status = "";
    var error = 0;
}


<style>
    table {
        background-color: white !important;
    }

    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
        background-color: white !important;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }

    #tr1 {
        border: 1px solid black;
        height: 150px;
    }

    #tr2 {
        text-align: center;
        border: 1px solid black;
        height: 10px;
    }

    /*======================================================================*/
    /*============================ CUSTOM BUTTON ===========================*/
    /*======================================================================*/

    .btn_print {
        display: inline-block;
        background-color: rgba(244, 143, 28, 0.8);
        height: 35px;
        width: 75px !important;
        /*width: 100%;*/
        color: white;
        border: 1px solid;
        border-radius: 3px 3px 5px;
    }

