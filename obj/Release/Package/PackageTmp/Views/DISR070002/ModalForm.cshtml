<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">FORM ADD NG</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Kode NG</label>
                        <input id="addIdNG" required type="text" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Name NG</label>
                        <input id="addNameNG" required type="text" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        @*<label class="required">Flg Count</label>*@
                        @*<input id="addFlgCount" required type="text" class="form-control" value="1" hidden />*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="required">Status NG</label>
                        <select id="addStatusNG" name="dropdown">
                            <option id="addStatusNG" value="1" selected="selected"> Aktif </option>
                            <option id="addStatusNG" value="0" selected="selected"> Tidak Aktif </option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        @*<label class="required">Time Koshin</label>*@
                        @*<input id="addTimeKoshin" required type="datetime-local" class="form-control" hidden/>*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

