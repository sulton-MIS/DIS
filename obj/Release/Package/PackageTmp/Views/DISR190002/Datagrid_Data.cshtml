@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISR190002Master;
@{
    List<DISR190002Master> DataWP = (List<DISR190002Master>)ViewData["DataDISR190002"];
    //List<DISR190002Similar_Type> Similar_Parts = (List<DISR190002Similar_Type>)ViewData["Similar_Parts"];
    List<DISR190002Similar_Type> List_Tipe_Similar = (List<DISR190002Similar_Type>)ViewData["DataSimilar"];
    List<DISR190002Master> List_All_Tipe = (List<DISR190002Master>)ViewData["all_tipe"];

}

<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0 5px 0 5px !important;
    }
</style>

<div class="row" style="margin-left: 0px; overflow: hidden; position: relative" id="Datagrid_Data">
    <!------------------ TABEL ID PRODUKSI DAN PROSES ------------------------>
    <div class="col-xs-6 col-sm-6" style="overflow: hidden;" id="GridTable">
        <p style="width: 100%; color: blue; text-decoration: underline;">
            <b>Schedule Process</b>
        </p>
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 30%; border-right:17px solid #fff; position:sticky; top:0">

                <input style="" type="hidden" maxlength="50" id="ID_SEISAN" value="@ViewData["ID_SEISAN"]" class="form-control" placeholder="" />

                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 30%; table-layout: fixed">
                    <thead>
                        <tr>
                            <th style="width: 50px; text-align: center; display:none;" class="grid-checkbox-col" rowspan="2">
                                <input type="checkbox" value="All" style="height: 12px;" id="checkall" checked />
                            </th>
                            @*<th style="width: 75px;">No</th>*@
                            @*<th style="width: 400px;">ID PRODUKSI</th>*@
                            @*<th style="width: 200px;">DMC CODE</th>*@
                            @*<th style="width: 200px;">LOT</th>*@
                            <th style="width: 350px;">NAMA PROSES</th>
                            <th style="width: 200px;">QTY_SCHEDULE</th>

                        </tr>
                    </thead>
                    @{
                        if (DataWP == null || DataWP.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="27" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!--data grid-->
            <div id="tScrollBody" style="height: 350px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 30%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        <!----><!----><!---->
                        @{
                            if (DataWP != null)
                            {
                                if (DataWP.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISR190002Master item in DataWP)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td style="width: 50px; text-align: center; display:none" class="grid-checkbox-col">
                                                <input class="grid-checkbox"
                                                       value="@item.ROW_NUM, @item.ID_SEISAN,@item.ID_HINMOKU, @item.OTHER_LOTNO, @item.CONT, @item.AMNT_KEIKAKU_2"
                                                       type="checkbox" name="checkdata[]" id="check-@number" style="height: 12px; display: none;" checked />
                                            </td>
                                            @*<td style="width: 75px"> @item.ROW_NUM </td>*@
                                            @*<td style="width: 400px"> @item.ID_SEISAN</td>*@
                                            @*<td style="width: 200px"> @item.ID_HINMOKU</td>*@
                                            @*<td style="width: 200px"> @item.OTHER_LOTNO</td>*@
                                            <td style="width: 350px"> @item.CONT</td>
                                            <td style="width: 200px"> @item.AMNT_KEIKAKU_2</td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                        <!----><!----><!---->
                    </tbody>
                </table>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%" id="GridTable">
            <tfoot>
                <tr>
                    <td colspan="8" id="partialPaging">
                        @Html.Partial("Datagrid_Paging")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <!-- Table Similar -->
    <div class="table-responsive col-xs-6 col-sm-6" style="overflow: hidden; margin-top:0px; margin-bottom:100px;" id="GridTable">
        <p style="width: 100%; color: blue; text-decoration: underline;">
            <b>Similar Type</b>
        </p>
        <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
            <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
            <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 100%; table-layout: fixed; border:none">
                    <thead>
                        <tr>
                            <th style="width: 250px;">CODE</th>
                        </tr>
                    </thead>
                    @{
                        if (List_Tipe_Similar == null || List_Tipe_Similar.Count == 0)
                        {
                            <tr id="NoDataFound">
                                <td colspan="1" class="text-center">No data found</td>
                            </tr>
                        }
                    }
                </table>
            </div>
            <div id="tScrollBody" style="height: 350px;">
                <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 100%; table-layout: fixed; border: none">
                    <tbody id="tableBody">
                        @{
                            if (List_Tipe_Similar != null)
                            {
                                if (List_Tipe_Similar.Count > 0)
                                {
                                    var number = 1;
                                    foreach (DISR190002Similar_Type item in List_Tipe_Similar)
                                    {
                                        <tr id="row-@number" class="row-@item.ID">
                                            <td class="align-left align-middle" style="width: 250px"> @item.CODE </td>
                                        </tr>
                                        number++;
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</div>

