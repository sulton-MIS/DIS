
@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA100007Master;
@{
    List<DISA100007Master> List_Dokumen = (List<DISA100007Master>)ViewData["nama_dokumen"];
    List<DepartmentModel> Department = (List<DepartmentModel>)ViewData["nama_department"];
    List<SectionModel> Section = (List<SectionModel>)ViewData["nama_section"];

    string strAlpha = "";
}

<style>
    .col-md-12{
        margin-top: 5px;
    }
</style>

<!--form add new data-->
<div id="modalForm" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
                <h4 class="modal-title" id="modalForm-title">Form Add Data Document</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <label class="required">Jenis Transaksi <font color="red">*</font> </label>
                            <select required class="form-control" id="addJenisTransaksi" name="dropdown">
                                <option value=""> --Pilih-- </option>
                                <option value="taruh" selected="selected">Taruh Dokumen</option>
                                @*<option value="pinjam">Pinjam Dokumen</option>*@
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12" id="display_Nama_Dokumen">
                            <label class="required">Nama Dokumen <font color="red">*</font> </label>
                            <input autocomplete="off" id="addNamaDokumen" required type="text" class="form-control" /> @* Berbentuk textboxt saat jenis transaksi Taruh *@
                        </div>
                        <div class="col-md-12" id="display_selectNamaDokumen">
                            <label class="required">Nama Dokumen <font color="red">*</font> </label>
                            <select class="form-control select2" id="selectNamaDokumen" required>
                                <option value="" selected="selected" style="font-style: italic; color: gray"> --- Masukkan Nama Dokumen --- </option>
                                @{
                                    if (List_Dokumen != null)
                                    {
                                        if (List_Dokumen.Count() > 0)
                                        {
                                            foreach (DISA100007Master item in List_Dokumen)
                                            {
                                                <option value="@item.NAMA_DOCUMENT">@item.NAMA_DOCUMENT</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="required">Qty Bundle (input baru) <font color="red">*</font> </label>
                            <input autocomplete="off" id="addQtyBundle" required type="number" class="form-control" />
                        </div>
                        <div class="col-md-6" id="display_Qty_Rak">
                            <label class="required">Qty Bundle (di Rak) </label>
                            <input autocomplete="off" id="QtyBundle_Rak" required type="number" class="form-control" />
                        </div>

                    </div>

                    <div class="col-md-12" id="display_Nama_Peminjam">
                        <div class="col-md-12">
                            <label class="required">Nama Peminjam <font color="red">*</font> </label>
                            <input autocomplete="off" id="addNamaPeminjam" required type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="required">Department <font color="red">*</font> </label>
                            <select required class="form-control" id="addDepartment" name="dropdown">
                                @*<option value="">- select -</option>*@
                                @{
                                    if (ViewData["RegNo"].ToString() == "PIC")
                                    {
                                        <option value="@ViewData["NAMA_DEPT_ALIAS"]" selected>@ViewData["NAMA_DEPT_ALIAS"]</option>
                                    }
                                    else
                                    {
                                        if (Department != null)
                                        {
                                            if (Department.Count() > 0)
                                            {
                                                foreach (DepartmentModel item in Department)
                                                {
                                                    <option value="@item.kode_dept">@item.nama_dept_alias</option>
                                                }
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="required">Bagian <font color="red">*</font> </label>
                            <select class="form-control select2" id="addBagian" disabled required>
                                <option value="">- select -</option>
                                @{
                                    if (Section != null)
                                    {
                                        if (Section.Count() > 0)
                                        {
                                            foreach (SectionModel item in Section)
                                            {
                                                <option style="display: none" value="@item.nama_section_alias" area="@item.kode_dept">@item.nama_section_alias (@item.nama_section)</option>
                                            }
                                        }
                                    }
                                    
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="required">No. Rak </label>
                            <input autocomplete="off" id="addNomorRak" required type="number" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="required">Label Rak </label>
                            <select required class="form-control" id="addLabelRak" name="dropdown">
                                <option value="" selected="selected"> --Pilih-- </option>
                                @{
                                    //Loop through the ASCII characters 65 to 90
                                    for (int i = 65; i <= 90; i++)

                                    {
                                        // Convert the int to a char to get the actual character behind the ASCII code
                                        strAlpha = ((char)i).ToString();

                                        <option value="@strAlpha">@strAlpha</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12" id="display_Waktu_Simpan">
                        <div class="col-md-6">
                            <label class="required">Masa Simpan (<i>ex: 1 tahun</i>) <font color="red">*</font></label>
                            <input autocomplete="off" id="addMasaSimpan" required type="number" class="form-control" placeholder="Masukkan jumlah tahun" />
                        </div>
                    </div>
                    <div class="col-md-12" id="display_Waktu_Pinjam">
                        <div class="col-md-6">
                            <label class="required">Masa Pinjam (<i>ex: 1 hari</i>) <font color="red">*</font></label>
                            <input autocomplete="off" id="addMasaPinjam" required type="number" class="form-control" placeholder="Masukkan jumlah hari" />
                        </div>
                        <div class="col-md-6">
                            <label class="required">Tanggal Pinjam <font color="red">*</font></label>
                            <input id="addTglPinjam" required type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        @*<div class="col-md-4">
                            <label class="required">Tanggal Kembali <font color="red">*</font></label>
                            <input autocomplete="off" id="addTglKembali" required type="date" class="form-control" />
                        </div>*@
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <label class="required">Keterangan</label>
                            <textarea id="addKeterangan" class="form-control" style="height: 100px"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="add_check()" id="btn_Confirm_Delete" class="btn btn-primary btn-sm" style="width: 80px;"><i class="fa fa-check"></i> SAVE</button>
                <button onclick="btn_cancel()" type="button" id="btnNo" class="btn btn-danger btn-sm" style="width: 80px;" data-dismiss="modal"><i class="fa fa-times"></i>  CANCEL</button>
            </div>
        </div>
    </div>
</div>

