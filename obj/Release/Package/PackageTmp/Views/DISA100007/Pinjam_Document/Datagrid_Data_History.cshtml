@using AI070.Models;
@using AI070.Models.Shared;
@using AI070.Models.DISA100007Master;
@{
    List<History_Data> History_Dokumen = (List<History_Data>)ViewData["DataHistory_Document"];
}
<style>
    th {
        text-align: center;
    }

    #tblScroll tbody td {
        vertical-align: middle;
    }

    #tblScroll tbody tr:hover {
        /*background: #0e54fb;*/
        background-color: darkgrey;
        color: white;
    }

    #tblScroll tr.selected {
        /*background: #0e54fb;*/
        background-color: darkgrey;
        color: white;
    }

    #bungkusTable {
        overflow-y: hidden;
    }

    #dataGrid {
        overflow-x: hidden;
    }

    td {
        padding: 0px 5px 0px 5px !important;
    }

    #div_keterangan_umum{
        margin-left: 20px;
        font-size: 14px;
        font-family: Calibri;
        
    }

</style>

<div class="row" style="margin-top: -13px; margin-left: 10px; margin-right: 10px">
    <div class="col-xs-12 col-sm-12 col-md-11">
        <h2><b>[@ViewData["Title"]]</b></h2>
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default" style="border: none;">
                <div class="panel-body" style="border: none;">
                    <div class="row" style="margin-bottom: -25px;margin-top: -10px; border:none;">
                        <div class="col-md-12" id="div_keterangan_umum">
                            <table>
                                <tr>
                                    <td>NO. DOKUMEN</td>
                                    <td>:</td>
                                    <td>@ViewData["NO_DOKUMEN"]</td>
                                </tr>
                                <tr>
                                    <td>NAMA DOKUMEN</td>
                                    <td>:</td>
                                    <td>@ViewData["NAMA_DOKUMEN"]</td>
                                </tr>
                            </table>

                        </div>
                        
                        <div class="col-md-12">
                            @*<center>
                                <img src="~/Content/Upload/Foto/ManajementAsset/Pengadaan_Asset/@ViewData["NAMA_FOTO"]" style="width:250px; height:230px; border: 0.5px solid #dddfe1; border-radius: 20px" />
                            </center>*@
                                
                            
                            <div class="table-responsive col-xs-12 col-sm-12" style="overflow: hidden; margin-top:10px;" id="Data_History">
                                <p style="width: 20%; color: blue; text-decoration: underline;">
                                    <b>Log Activity</b>
                                </p>
                                <div style="border: 1pt solid #ccc; overflow:scroll; position: relative;">
                                    <div id="gutterGrid" style="position: absolute; display: block; top: 0; right: 0; width: 17px; height: auto; border-left: 0px solid #ddd; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background: rgb(241, 241, 241);"></div>
                                    <div id="tScrollHead" style="width: 100%; border-right:17px solid #fff; position:sticky; top:0">
                                        <table id="dynamic-table" class="table table-striped table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; border:none">
                                            <thead>
                                                <tr style="background: yellow !important">
                                                    <th style="width: 50px;">No.</th>
                                                    <th style="width: 500px;">KETERANGAN</th>
                                                    <th style="width: 150px;">NAMA MENU</th>
                                                    <th style="width: 150px;">NAMA FITUR</th>
                                                    <th style="width: 200px;">CREATED DATE</th>
                                                    <th style="width: 150px;">CREATED BY</th>
                                                </tr>
                                            </thead>
                                            @{
                                                if (History_Dokumen == null || History_Dokumen.Count == 0)
                                                {
                                                    <tr id="NoDataFound">
                                                        <td colspan="10" class="text-center">No data found</td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>

                                    <!--data grid-->
                                    <div id="tScrollBody" style="height: 250px;">
                                        <table id="tblScroll" class="table table-bordered table-condensed table-fixed" style="width: 50%; table-layout: fixed; border: none">
                                            <tbody id="tableBody">
                                                <!----><!----><!---->
                                                @{
                                                    if (History_Dokumen != null)
                                                    {
                                                        if (History_Dokumen.Count > 0)
                                                        {
                                                            var number = 1;
                                                            foreach (History_Data item in History_Dokumen)
                                                            {
                                                                <tr id="row-@number" class="row-@item.ID">
                                                                    <td class="align-center align-middle" style="width: 50px"> @number </td>
                                                                    @*<td class="align-left align-middle" style="width: 200px"> @item.NO_ASSET </td>*@
                                                                    <td class="align-left align-middle" style="width: 500px"> @item.keterangan</td>
                                                                    <td class="align-left align-middle" style="width: 150px"> @item.nm_menu</td>
                                                                    <td class="align-left align-middle" style="width: 150px"> @item.nm_fitur</td>
                                                                    <td class="align-left align-middle" style="width: 200px"> @item.created_date</td>
                                                                    <td class="align-left align-middle" style="width: 150px"> @item.created_by</td>
                                                                </tr>
                                                                number++;
                                                            }
                                                        }
                                                    }
                                                }
                                                <!----><!----><!---->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col align-right align-bottom">
        <button type="button" class="btn btn-danger btn-sm btn-close" id="btn_close" onclick="back()"><i class="fa fa-close"></i></button>
    </div>
</div>


